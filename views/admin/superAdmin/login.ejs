<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Smart Building Services - Login</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body class="bg-white overflow-hidden font-sans">
        <!-- Top Decorative Wave Image -->
        <div class="relative">
            <img src="../Icons/images/SuperAuthTop.png" alt="Top Decoration" class="w-full" />
        </div>

        <!-- Main Content -->
        <div class="max-w-7xl mx-auto flex items-center justify-between px-8 mt-[-40px]">
            <!-- Login Box -->
            <div
                class="w-[360px] bg-[#f6f6f6] border border-gray-300 rounded-2xl shadow-md px-6 py-8 mt-12"
            >
                <form method="post">
                    <h2 class="text-2xl text-center font-semibold text-black">Login</h2>
                    <p class="text-gray-500 text-center mb-6">to continue</p>

                    <label class="text-sm font-semibold text-[#163f75] mb-1 block">
                        Phone Number
                    </label>
                    <div class="flex items-center border-b border-gray-300 mb-5 pb-2 relative">
                        <!-- Country Flag Dropdown -->
                        <div class="relative mr-2 w-6 h-4">
                            <select
                                id="countrySelect"
                                class="absolute inset-0 opacity-0 cursor-pointer w-full h-full"
                            >
                                <option value="bh" selected>Bahrain</option>
                                <option value="sa">Saudi Arabia</option>
                                <option value="ae">UAE</option>
                                <option value="qa">Qatar</option>
                                <option value="kw">Kuwait</option>
                                <option value="om">Oman</option>
                            </select>
                            <img
                                id="flagIcon"
                                src="https://flagcdn.com/w40/bh.png"
                                class="w-full h-full object-cover border rounded-sm"
                            />
                            <!-- Dropdown arrow icon -->
                        </div>

                        <!-- Phone Input -->
                        <input
                            type="text"
                            placeholder="Enter Your Phone Number"
                            class="w-full bg-transparent focus:outline-none text-sm"
                        />
                    </div>

                    <!-- Password Input -->
                    <label class="text-sm font-semibold text-[#163f75] text-700 mb-1 block">
                        Password
                    </label>
                    <div class="flex items-center border-b border-gray-300 pb-2">
                        <input
                            type="password"
                            placeholder="Enter Your Password"
                            class="w-full bg-transparent focus:outline-none text-sm"
                        />
                        <img
                            src="../Icons/images/eye-svgrepo-com.svg"
                            alt="Show Password"
                            class="w-[10%] cursor-pointer"
                        />
                    </div>

                    <div class="text-right text-sm mt-1">
                        <a href="#" class="text-500 hover:underline text-[#448a9d]">
                            Forgot your password?
                        </a>
                    </div>

                    <button
                        class="bg-[#163f75] text-white rounded-full w-full py-2 mt-6 hover:bg-[#10294f] transition"
                        type="submit"
                    >
                        Login
                    </button>
                </form>
            </div>

            <!-- Logo -->
            <div class="flex flex-col items-center justify-center mt-16">
                <img src="../Icons/images/SuperLogo.png" alt="Logo" />
            </div>
        </div>

        <!-- Bottom Curve SVG with Centered Text -->
        <div class="w-[90%] transform -translate-x-[10%]">
            <img src="../Icons/images/SuperAuthButtom.png" alt="Footer Decoration" />
            <div
                class="absolute bottom-8 left-1/3 transform -translate-x-1/2 -translate-y-1/2 text-[#333] text-5xl font-[600]"
            >
                Super Admin Portal
            </div>
        </div>

        <script>
            const countrySelect = document.getElementById("countrySelect");
            const flagIcon = document.getElementById("flagIcon");

            const flagMap = {
                bh: "https://flagcdn.com/w40/bh.png",
                sa: "https://flagcdn.com/w40/sa.png",
                ae: "https://flagcdn.com/w40/ae.png",
                qa: "https://flagcdn.com/w40/qa.png",
                kw: "https://flagcdn.com/w40/kw.png",
                om: "https://flagcdn.com/w40/om.png",
            };

            countrySelect.addEventListener("change", function () {
                const selected = this.value;
                flagIcon.src = flagMap[selected];
            });
        </script>
    </body>
</html>
