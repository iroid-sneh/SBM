        });

        function closePreferenceModal() {
            document.getElementById("preference-modal").classList.add("hidden");
        }

        function openPreferenceModal() {
            document.getElementById("preference-modal").classList.remove("hidden");
        }

        function selectServiceType(type) {
            const service = document.getElementById("service-card");
            const maintenance = document.getElementById("maintenance-card");

            if (type === "service") {
                service.classList.add("border-[#54B7C5]", "bg-[#EFFDFF]");
                maintenance.classList.remove("border-[#54B7C5]", "bg-[#EFFDFF]");
            } else if (type === "maintenance") {
                maintenance.classList.add("border-[#54B7C5]", "bg-[#EFFDFF]");
                service.classList.remove("border-[#54B7C5]", "bg-[#EFFDFF]");
            } else {
                maintenance.classList.add("bg-[white]");
                service.classList.add("bg-[white]");
            }
        }

        function submitPreference() {
            window.location.href = `<%= process.env.APP_URL_ADMIN %>/adminprofile`;
        }
    </script>
