<script>
    function toggleFAQ(headerDiv) {
        const faqItem = headerDiv.closest(".faq-item");
        const content = faqItem.querySelector(".faq-content");
        const svg = headerDiv.querySelector("svg");

        if (content.style.height && content.style.height !== "0px") {
            // Collapse
            content.style.height = content.scrollHeight + "px"; // set current height
            requestAnimationFrame(() => {
                content.style.height = "0px";
            });
            svg.classList.remove("rotate-45");
        } else {
            // Expand
            content.style.height = content.scrollHeight + "px";
            svg.classList.add("rotate-45");

            // Clear height after transition to allow auto height expansion if needed
            content.addEventListener("transitionend", function clearHeight() {
                if (content.style.height !== "0px") content.style.height = "auto";
                content.removeEventListener("transitionend", clearHeight);
            });
        }
    }
</script>
