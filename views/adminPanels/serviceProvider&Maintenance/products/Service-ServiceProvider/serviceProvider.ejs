<script>
    document.querySelectorAll('input[name="deliveryCharge"]').forEach((radio) => {
        radio.addEventListener("change", function () {
            const deliveryFee = document.getElementById("deliveryFeeInput");
            const minOrder = document.getElementById("minOrderFreeInput");

            if (this.value === "free") {
                deliveryFee.classList.add("hidden");
                minOrder.classList.add("hidden");
            } else if (this.value === "chargeable") {
                deliveryFee.classList.remove("hidden");
                minOrder.classList.add("hidden");
            } else if (this.value === "minimum") {
                deliveryFee.classList.remove("hidden");
                minOrder.classList.remove("hidden");
            }
        });
    });
</script>
