    aria-hidden="true"
>
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-5 z-50">
        <div class="bg-[#F6F9FC] rounded-2xl shadow-xl w-full max-w-xl overflow-hidden">
            <!-- Modal Header -->
            <div class="flex justify-between items-center p-6 border-b border-gray-200">
                <h3 class="text-xl font-semibold text-gray-800 text-center w-full">
                    Your Experience
                </h3>
                <button
                    class="text-red-500 hover:text-red-700 text-sm font-medium"
                    data-modal-hide="experienceModal"
                >
                    Close
                </button>
            </div>

            <!-- Modal Content -->
            <div class="px-6 pb-6 mt-6 flex flex-col justify-center items-center">
                <!-- Container that aligns label and input to start -->
                <div class="w-full max-w-[360px] flex flex-col items-start">
                    <!-- Input Label -->
                    <label for="hourlyPrice" class="block text-sm text-gray-700 mb-2">
                        Experience
                    </label>

                    <!-- Input + Icon Group -->
                    <div class="relative w-full">
                        <!-- Input Field -->
                        <input
                            type="number"
                            id="inputExperience"
                            placeholder="Experience"
                            class="w-full pl-4 pr-4 py-3 rounded-xl border border-gray-200 shadow-xl placeholder-gray-500 text-sm text-gray-700 bg-white focus:outline-none"
                        />
                    </div>
                </div>
            </div>

            <!-- Modal Footer -->
            <div class="flex justify-center mb-8 border-gray-200">
                <button
                    id="saveExperienceBtn"
                    type="button"
                    data-modal-hide="experienceModal"
                    class="bg-[#163F75] hover:bg-[#4BB3C2] w-[360px] text-white py-3 px-9 rounded-lg font-medium text-base shadow-[0px_4px_10px_rgba(0,0,0,0.05)] transition"
                >
                    Save
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Save Hourly Price
        document.getElementById("saveHourlyBtn")?.addEventListener("click", function () {
            const hourlyInput = document.getElementById("inputHourlyPrice").value.trim();
            const value = "BHD " + hourlyInput + ".000" || "BHD 0.000";
            document.getElementById("displayHourlyPrice").textContent = value;
        });

        // Save Experience
        document.getElementById("saveExperienceBtn")?.addEventListener("click", function () {
            const experienceInput = document.getElementById("inputExperience").value.trim();
            const value = experienceInput ? `${experienceInput} Years` : "0 Years";
            document.getElementById("displayExperience").textContent = value;
        });
    });
</script>
