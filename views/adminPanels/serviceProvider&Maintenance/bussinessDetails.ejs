        const categoryMap = {
            "Pet Care": {
                Veternariy: [],
                "Pet Sitter": [],
            },
            Tutors: {
                Education: {
                    Skills: ["Maths", "Science"],
                    Level: ["Primary", "Secondary"],
                },
                Instruments: ["Guitar", "Violin"],
                Cooking: ["Indian", "Chinese"],
            },
            Trainers: {
                Fitness: ["Aerobics", "Weight Loss"],
                Swimming: [],
                "Pet Training": [],
            },
        };

        document.addEventListener("DOMContentLoaded", () => {
            const serviceType = document.getElementById("serviceType");
            const subCategory = document.getElementById("subCategory");
            const subSubWrapper = document.getElementById("subSubContainerWrapper");

            // On Service Type Change
            serviceType.addEventListener("change", () => {
                const subOptions = categoryMap[serviceType.value] || {};
                subCategory.innerHTML = `<option hidden value="">Sub Category</option>`;
                Object.keys(subOptions).forEach((opt) => {
                    subCategory.innerHTML += `<option value="${opt}">${opt}</option>`;
                });

                subCategory.classList.remove("hidden");
                subSubWrapper.classList.add("hidden");
                subSubWrapper.innerHTML = "";
            });

            // ✅ On Sub Category Change — THIS IS WHERE SUBSUBS ARE HANDLED
            subCategory.addEventListener("change", () => {
                const selectedService = serviceType.value;
                const selectedSub = subCategory.value;
                const subSubData = categoryMap[selectedService][selectedSub];

                subSubWrapper.innerHTML = "";

                // No sub-sub data = hide
                if (!subSubData || Object.keys(subSubData).length === 0) {
                    subSubWrapper.classList.add("hidden");
                    return;
                }

                let columnCount = 1;

                if (Array.isArray(subSubData)) {
                    // One select
                    const select = createSelect(subSubData, "Select Option");
                    subSubWrapper.appendChild(select);
                } else if (typeof subSubData === "object") {
                    // Multiple selects (Education case)
                    columnCount = Object.keys(subSubData).length;
                    Object.entries(subSubData).forEach(([label, options]) => {
                        const select = createSelect(options, `Select ${label}`);
                        subSubWrapper.appendChild(select);
                    });
                }

                // Set correct columns
                subSubWrapper.classList.remove("grid-cols-1", "grid-cols-2");
                subSubWrapper.classList.add(`grid-cols-${columnCount}`);
                subSubWrapper.classList.remove("hidden");
            });

            // Utility: Create a styled select
            function createSelect(options, placeholder) {
                const select = document.createElement("select");
                select.className =
                    "w-full px-4 py-3 bg-white rounded-xl text-gray-700 border text-sm focus:outline-none placeholder-gray-500 shadow-xl";
                select.innerHTML = `<option hidden value="">${placeholder}</option>`;
                options.forEach((opt) => {
                    select.innerHTML += `<option value="${opt}">${opt}</option>`;
                });
                return select;
            }
        });

        const imageUpload = document.getElementById("imageUpload");
        const profilePlaceholder = document.getElementById("profilePlaceholder");

        imageUpload.addEventListener("change", function () {
            const file = this.files[0];
            if (file) {
