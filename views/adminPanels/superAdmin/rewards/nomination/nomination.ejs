<%- include('../../../../layouts/header.ejs', {currentPage: 'rewards'}) %>
<body class="flex min-h-screen bg-[#f6f6f6]">
    <main class="ml-64">
        <div class="min-h-screen bg-[#f6f6f6] rounded-l-[50px] p-8 shadow-md flex flex-col">
            <div class="bg-[#eaeae9] rounded-l-[25px] rounded-r-[25px] shadow-md border-[2px]">
                <div class="bg-white rounded-l-[25px] rounded-r-[25px] p-6 shadow-md border-[2px]">
                    <div class="flex justify-between items-center">
                        <!-- Left side - Finance title -->
                        <div class="flex items-center space-x-2">
                            <h1 class="text-3xl font-bold text-gray-800">Rewards</h1>
                        </div>

                        <!-- Right side - Profile info -->
                        <div class="flex items-center space-x-3">
                            <img
                                src="https://i.pravatar.cc/40?img=11"
                                alt="Profile"
                                class="w-10 h-10 rounded-full shadow-md"
                            />
                            <div class="text-right">
                                <div class="text-base font-semibold text-gray-800">
                                    Thomas Lewis
                                </div>
                                <div class="text-sm text-gray-500">Super Admin</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-1 p-2 flex items-center justify-between">
                    <!-- Category switcher centered -->
                    <div class="flex-1 flex justify-end">
                        <div
                            id="categorySwitcher"
                            class="flex bg-white rounded-full overflow-hidden w-fit h-[47px]"
                        >
                            <button
                                class="category-btn w-[110px] h-[38px] px-3 text-xs rounded-full m-1 flex items-center justify-center text-center bg-[#163f75] text-white"
                                onclick="window.location.href=`<%= process.env.APP_URL_ADMIN %>/super-admin/rewards/nomination`"
                            >
                                Nomination
                            </button>
                            <button
                                class="category-btn w-[120px] h-[38px] px-3 text-xs rounded-full m-1 flex items-center justify-center text-center bg-white text-gray-700"
                                onclick="window.location.href=`<%= process.env.APP_URL_ADMIN %>/super-admin/rewards/coupons`"
                            >
                                Coupons
                            </button>
                            <button
                                class="category-btn w-[100px] h-[38px] px-3 text-xs rounded-full m-1 flex items-center justify-center text-center bg-white text-gray-700"
                                onclick="window.location.href=`<%= process.env.APP_URL_ADMIN %>/super-admin/rewards/promocode`"
                            >
                                Promocode
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-1"></div>

            <div class="bg-[#f6f6f6] p-8">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 py-2 px-4 items-center mb-3">
                    <!-- Search Input -->
                    <div class="relative"></div>

                    <!-- Empty middle column for spacing -->
                    <div class="hidden md:block"></div>

                    <!-- Request Type Buttons -->
                    <div class="flex justify-end items-center space-x-1">
                        <div class="relative">
                            <div
                                class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                            >
                                <svg
                                    class="h-5 w-5 text-gray-400"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                                    />
                                </svg>
                            </div>
                            <input
                                type="text"
                                placeholder="Search"
                                class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-full bg-white shadow-sm focus:outline-none focus:ring-2 focus:ring-[#163f75] focus:border-[#163f75] sm:text-sm"
                            />
                        </div>
                    </div>
                </div>
                <!-- DataTable Section -->
                <div class="overflow-x-auto">
                    <table id="usersTable" class="min-w-full" datatables="true">
                        <thead class="bg-[#eaeae9] rounded-t-[30px]">
                            <tr>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider first:rounded-l-lg last:rounded-r-lg"
                                >
                                    Nominee Name
                                </th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                >
                                    Building/Complex
                                </th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                >
                                    Flat/Villa
                                </th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                >
                                    Points
                                </th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                >
                                    Prize
                                </th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200 bg-[#f6f6f6]">
                            <!-- User 1 -->
                            <tr>
                                <td class="flex items-center p-4 space-x-1 whitespace-nowrap">
                                    <img
                                        class="w-10 h-10 rounded-full"
                                        src="https://flowbite-admin-dashboard.vercel.app/images/users/neil-sims.png"
                                        alt="Neil Sims avatar"
                                    />
                                    <div class="text-base font-semibold text-gray-900">
                                        Freansesca Metts
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    Marasai Residences
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    123 - Flat
                                </td>
                                <td
                                    class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"
                                >
                                    350
                                </td>
                                <!-- Comment Button that opens modal -->
                                <td class="px-6 py-4 p-6 whitespace-nowrap text-sm text-gray-500">
                                    <button
                                        data-modal-target="add-rewards-prize-comment-modal"
                                        data-modal-toggle="add-rewards-prize-comment-modal"
                                        class="w-full px-3 py-2 text-left bg-white rounded-lg shadow-sm hover:ring-1 hover:ring-gray-300 focus:outline-none"
                                    >
                                        <span class="text-gray-700 text-sm comment-text">
                                            Click to add comment
                                        </span>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Pagination Info -->
                    <div class="mt-4 text-sm text-gray-600 px-6">Showing 1 of 28</div>
                </div>
            </div>
        </div>
    </main>

    <!-- Add Reply For Rewards Prize Modal -->
    <div
        id="add-rewards-prize-comment-modal"
        tabindex="-1"
        class="fixed inset-0 z-50 hidden w-full h-full bg-black bg-opacity-20 backdrop-blur-sm flex items-center justify-center"
        aria-hidden="true"
    >
        <div class="bg-[#F7F6F5] rounded-2xl shadow-xl w-full max-w-md mx-4 p-6">
            <!-- Header -->
            <div class="flex justify-between items-center border-b pb-2">
                <h3 class="text-lg font-semibold text-center w-full">Reply</h3>
                <button
                    type="button"
                    data-modal-hide="add-rewards-prize-comment-modal"
                    class="text-red-500 text-sm absolute right-6 top-5 hover:text-red-600"
                >
                    Close &times;
                </button>
            </div>

            <!-- Body -->
            <div class="mt-6">
                <textarea
                    rows="4"
                    placeholder="Write here"
                    class="w-full p-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#54B7C5]/50 text-sm"
                ></textarea>
            </div>
            <div class="flex justify-center space-x-4 mt-8">
                <button
                    id="save-rewrads-prize-comment"
                    data-modal-hide="add-rewards-prize-comment-modal"
                    class="bg-[#54B7C5] hover:bg-[#48aab8] text-white font-semibold rounded-[10px] px-6 py-2 w-[200px]"
                >
                    Submit
                </button>
            </div>
        </div>
    </div>
    <script>
        let currentCommentButton = null;

        // Handle opening the modal and storing the clicked button
        document
            .querySelectorAll('[data-modal-target="add-rewards-prize-comment-modal"]')
            .forEach((button) => {
                button.addEventListener("click", () => {
                    currentCommentButton = button;
                    const existingText = currentCommentButton
                        .querySelector(".comment-text")
                        .textContent.trim();
                    document.querySelector("#add-rewards-prize-comment-modal textarea").value =
                        existingText === "Click to add comment" ? "" : existingText;
                });
            });

        // Handle saving comment from modal
        document.getElementById("save-rewrads-prize-comment").addEventListener("click", () => {
            const comment = document
                .querySelector("#add-rewards-prize-comment-modal textarea")
                .value.trim();
            if (currentCommentButton) {
                const span = currentCommentButton.querySelector(".comment-text");
                span.textContent = comment || "Click to add comment";
            }

            // Clear and reset
            document.querySelector("#add-rewards-prize-comment-modal textarea").value = "";
            currentCommentButton = null;
        });
    </script>
</body>
<%- include('../../../../layouts/footer.ejs') %>
