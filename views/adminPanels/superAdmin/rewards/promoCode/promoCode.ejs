<%- include('../../../../layouts/header.ejs', {currentPage: 'rewards'}) %>
<body class="flex min-h-screen bg-[#f6f6f6]">
    <main class="ml-64">
        <div class="min-h-screen bg-[#f6f6f6] rounded-l-[50px] p-8 shadow-md flex flex-col">
            <div class="bg-[#eaeae9] rounded-l-[25px] rounded-r-[25px] shadow-md border-[2px]">
                <div class="bg-white rounded-l-[25px] rounded-r-[25px] p-6 shadow-md border-[2px]">
                    <div class="flex justify-between items-center">
                        <!-- Left side - Finance title -->
                        <div class="flex items-center space-x-2">
                            <h1 class="text-3xl font-bold text-gray-800">Rewards</h1>
                        </div>

                        <!-- Right side - Profile info -->
                        <div class="flex items-center space-x-3">
                            <img
                                src="https://i.pravatar.cc/40?img=11"
                                alt="Profile"
                                class="w-10 h-10 rounded-full shadow-md"
                            />
                            <div class="text-right">
                                <div class="text-base font-semibold text-gray-800">
                                    Thomas Lewis
                                </div>
                                <div class="text-sm text-gray-500">Super Admin</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-1 p-2 flex items-center justify-between">
                    <!-- Category switcher centered -->
                    <div class="flex-1 flex justify-end">
                        <div
                            id="categorySwitcher"
                            class="flex bg-white rounded-full overflow-hidden w-fit h-[47px]"
                        >
                            <button
                                class="category-btn w-[110px] h-[38px] px-3 text-xs rounded-full m-1 flex items-center justify-center text-center bg-white text-gray-700"
                                onclick="window.location.href=`<%= process.env.APP_URL_ADMIN %>/super-admin/rewards/nomination`"
                            >
                                Nomination
                            </button>
                            <button
                                class="category-btn w-[120px] h-[38px] px-3 text-xs rounded-full m-1 flex items-center justify-center text-center bg-white text-gray-700"
                                onclick="window.location.href=`<%= process.env.APP_URL_ADMIN %>/super-admin/rewards/coupons`"
                            >
                                Coupons
                            </button>
                            <button
                                class="category-btn w-[100px] h-[38px] px-3 text-xs rounded-full m-1 flex items-center justify-center text-center bg-[#163f75] text-white"
                                onclick="window.location.href=`<%= process.env.APP_URL_ADMIN %>/super-admin/rewards/promocode`"
                            >
                                Promocode
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-1"></div>

            <div class="bg-[#f6f6f6] p-8">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 py-2 px-4 items-center mb-3">
                    <!-- Search Input -->
                    <div class="relative"></div>

                    <!-- Empty middle column for spacing -->
                    <div class="hidden md:block"></div>

                    <!-- Request Type Buttons -->
                    <div class="flex justify-end items-center space-x-1">
                        <div class="relative">
                            <div
                                class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                            >
                                <svg
                                    class="h-5 w-5 text-gray-400"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                                    />
                                </svg>
                            </div>
                            <input
                                type="text"
                                placeholder="Search"
                                class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-full bg-white shadow-sm focus:outline-none focus:ring-2 focus:ring-[#163f75] focus:border-[#163f75] sm:text-sm"
                            />
                        </div>
                        <div class="flex space-x-2">
                            <button
                                type="button"
                                data-modal-target="create-new-promocode-modal"
                                data-modal-toggle="create-new-promocode-modal"
                                class="w-[250px] h-[38px] px-3 text-m font-semibold rounded-full flex items-center justify-center bg-white text-[#163f75] hover:bg-gray-400 transition-colors border-[1px] border-[#163f75] shadow-sm hover:shadow-md"
                            >
                                + Create New Promocode
                            </button>
                        </div>
                    </div>
                </div>
                <!-- DataTable Section -->
                <div class="overflow-x-auto">
                    <table id="usersTable" class="min-w-full" datatables="true">
                        <thead class="bg-[#eaeae9] rounded-t-[30px]">
                            <tr>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider first:rounded-l-lg last:rounded-r-lg"
                                >
                                    Date/Time
                                </th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                >
                                    Promocode
                                </th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                >
                                    Notify By
                                </th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                >
                                    Flat Discount
                                </th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                >
                                    Min Order Value
                                </th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                >
                                    Start Date
                                </th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                >
                                    End Date
                                </th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                >
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200 bg-[#f6f6f6]">
                            <!-- User 1 -->
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    01:20:12 01/05/2025
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    WELCOME15
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    Notification
                                </td>
                                <td
                                    class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"
                                >
                                    15.000
                                </td>
                                <td
                                    class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"
                                >
                                    80.000
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    22/05/2025
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    31/07/2025
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    <button
                                        type="button"
                                        data-modal-target=""
                                        data-modal-toggle=""
                                        class="inline-flex items-center px-3 py-2"
                                    >
                                        <svg
                                            class="w-6 h-6 text-gray-800 dark:text-white"
                                            aria-hidden="true"
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="24"
                                            height="24"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke="#F26E6E"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z"
                                            />
                                        </svg>
                                    </button>
                                    <button
                                        type="button"
                                        data-modal-target="edit-promocode-modal"
                                        data-modal-toggle="edit-promocode-modal"
                                        class="inline-flex items-center"
                                    >
                                        <svg
                                            class="w-6 h-6 text-gray-800 dark:text-white"
                                            aria-hidden="true"
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="24"
                                            height="24"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke="#54B7C5"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="m14.304 4.844 2.852 2.852M7 7H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-4.5m2.409-9.91a2.017 2.017 0 0 1 0 2.853l-6.844 6.844L8 14l.713-3.565 6.844-6.844a2.015 2.015 0 0 1 2.852 0Z"
                                            />
                                        </svg>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Pagination Info -->
                    <div class="mt-4 text-sm text-gray-600 px-6">Showing 1 of 28</div>
                </div>
            </div>
        </div>
    </main>
    <!-- Create New Coupon Modal -->
    <div
        id="create-new-promocode-modal"
        tabindex="-1"
        class="fixed top-0 left-0 right-0 z-50 w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-modal md:h-full hidden"
        aria-hidden="true"
    >
        <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
            <div class="bg-[#F7F6F5] rounded-2xl shadow-xl w-full max-w-md overflow-hidden">
                <!-- Modal Header -->
                <div class="flex justify-between items-center p-6 border-b border-gray-200">
                    <h3 class="text-xl font-semibold text-gray-800">Create New Coupon</h3>
                    <button
                        class="text-red-500 hover:text-red-700 text-xl"
                        data-modal-hide="create-new-promocode-modal"
                    >
                        Close &times;
                    </button>
                </div>

                <!-- Modal Content -->
                <div class="p-6">
                    <div class="space-y-5">
                        <!-- PromoCode -->
                        <input
                            type="text"
                            placeholder="Enter Promocode"
                            class="w-full px-4 py-3 bg-white rounded-xl text-gray-700 text-sm focus:outline-none placeholder-gray-500 shadow-[0px_4px_10px_rgba(0,0,0,0.05)]"
                        />

                        <input
                            type="text"
                            placeholder="Flat Discount(Ex. 10.000 BHD)"
                            class="w-full px-4 py-3 bg-white rounded-xl text-gray-700 text-sm focus:outline-none placeholder-gray-500 shadow-[0px_4px_10px_rgba(0,0,0,0.05)]"
                        />

                        <input
                            type="text"
                            placeholder="Min Order Value(Ex. 10.000 BHD)"
                            class="w-full px-4 py-3 bg-white rounded-xl text-gray-700 text-sm focus:outline-none placeholder-gray-500 shadow-[0px_4px_10px_rgba(0,0,0,0.05)]"
                        />

                        <!-- Promocode Date -->
                        <div class="flex gap-4">
                            <!-- Date Picker -->
                            <div class="flex-1 relative">
                                <div
                                    class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none"
                                >
                                    <svg
                                        class="w-4 h-4 text-gray-500"
                                        aria-hidden="true"
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
                                        />
                                    </svg>
                                </div>
                                <input
                                    datepicker-orientation="bottom"
                                    datepicker
                                    datepicker-autohide
                                    type="text"
                                    placeholder="From"
                                    class="w-full pl-10 px-4 py-3 bg-white rounded-xl text-gray-700 text-sm focus:outline-none placeholder-gray-500 shadow-[0px_4px_10px_rgba(0,0,0,0.05)]"
                                />
                            </div>
                            <!-- Date Picker -->
                            <div class="flex-1 relative">
                                <div
                                    class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none"
                                >
                                    <svg
                                        class="w-4 h-4 text-gray-500"
                                        aria-hidden="true"
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
                                        />
                                    </svg>
                                </div>
                                <input
                                    datepicker-orientation="bottom"
                                    datepicker
                                    datepicker-autohide
                                    type="text"
                                    placeholder="To"
                                    class="w-full pl-10 px-4 py-3 bg-white rounded-xl text-gray-700 text-sm focus:outline-none placeholder-gray-500 shadow-[0px_4px_10px_rgba(0,0,0,0.05)]"
                                />
                            </div>
                        </div>
                        <!-- Notification Section -->
                        <div class="space-y-4">
                            <!-- Notification Selection -->
                            <label
                                for="notification-message"
                                class="block text-sm font-medium text-gray-700 mb-2"
                            >
                                Notify By
                            </label>
                            <div class="flex items-center space-x-4 ml-6">
                                <label class="inline-flex items-center">
                                    <input
                                        type="radio"
                                        name="notification-type"
                                        class="form-radio text-[#57C1D1]"
                                        checked
                                    />
                                    <span class="ml-2 text-gray-700">Notification</span>
                                </label>
                                <label class="inline-flex items-center">
                                    <input
                                        type="radio"
                                        name="notification-type"
                                        class="form-radio text-[#57C1D1]"
                                    />
                                    <span class="ml-2 text-gray-700">Personally</span>
                                </label>
                            </div>
                            <div>
                                <textarea
                                    id="notification-message"
                                    rows="4"
                                    placeholder="Write your notification message here..."
                                    class="w-full p-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#54B7C5]/50 text-sm shadow-sm"
                                ></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal Footer -->
                <div class="flex justify-center p-6 border-t border-gray-200">
                    <button
                        data-modal-hide="create-new-promocode-modal"
                        class="bg-[#57C1D1] hover:bg-[#4BB3C2] text-white py-3 px-9 rounded-lg font-medium text-base shadow-[0px_4px_10px_rgba(0,0,0,0.05)] transition"
                    >
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- edit Coupon Modal -->
    <div
        id="edit-promocode-modal"
        tabindex="-1"
        class="fixed top-0 left-0 right-0 z-50 w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-modal md:h-full hidden"
        aria-hidden="true"
    >
        <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
            <div class="bg-[#F7F6F5] rounded-2xl shadow-xl w-full max-w-md overflow-hidden">
                <!-- Modal Header -->
                <div class="flex justify-between items-center p-6 border-b border-gray-200">
                    <h3 class="text-xl font-semibold text-gray-800">Create New Coupon</h3>
                    <button
                        class="text-red-500 hover:text-red-700 text-xl"
                        data-modal-hide="edit-promocode-modal"
                    >
                        Close &times;
                    </button>
                </div>

                <!-- Modal Content -->
                <div class="p-6">
                    <div class="space-y-5">
                        <!-- PromoCode -->
                        <input
                            type="text"
                            placeholder="Enter Promocode"
                            value="WELCOME15"
                            class="w-full px-4 py-3 bg-white rounded-xl text-gray-700 text-sm focus:outline-none placeholder-gray-500 shadow-[0px_4px_10px_rgba(0,0,0,0.05)]"
                        />

                        <input
                            type="text"
                            value="15.000 BHD"
                            placeholder="Flat Discount(Ex. 10.000 BHD)"
                            class="w-full px-4 py-3 bg-white rounded-xl text-gray-700 text-sm focus:outline-none placeholder-gray-500 shadow-[0px_4px_10px_rgba(0,0,0,0.05)]"
                        />

                        <input
                            type="text"
                            value="50.000 BHD"
                            placeholder="Min Order Value(Ex. 10.000 BHD)"
                            class="w-full px-4 py-3 bg-white rounded-xl text-gray-700 text-sm focus:outline-none placeholder-gray-500 shadow-[0px_4px_10px_rgba(0,0,0,0.05)]"
                        />

                        <!-- Promocode Date -->
                        <div class="flex gap-4">
                            <!-- Date Picker -->
                            <div class="flex-1 relative">
                                <div
                                    class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none"
                                >
                                    <svg
                                        class="w-4 h-4 text-gray-500"
                                        aria-hidden="true"
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
                                        />
                                    </svg>
                                </div>
                                <input
                                    datepicker-orientation="bottom"
                                    datepicker
                                    datepicker-autohide
                                    type="text"
                                    placeholder="From"
                                    class="w-full pl-10 px-4 py-3 bg-white rounded-xl text-gray-700 text-sm focus:outline-none placeholder-gray-500 shadow-[0px_4px_10px_rgba(0,0,0,0.05)]"
                                />
                            </div>
                            <!-- Date Picker -->
                            <div class="flex-1 relative">
                                <div
                                    class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none"
                                >
                                    <svg
                                        class="w-4 h-4 text-gray-500"
                                        aria-hidden="true"
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
                                        />
                                    </svg>
                                </div>
                                <input
                                    datepicker-orientation="bottom"
                                    datepicker
                                    datepicker-autohide
                                    type="text"
                                    placeholder="To"
                                    class="w-full pl-10 px-4 py-3 bg-white rounded-xl text-gray-700 text-sm focus:outline-none placeholder-gray-500 shadow-[0px_4px_10px_rgba(0,0,0,0.05)]"
                                />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal Footer -->
                <div class="flex justify-center p-6 border-t border-gray-200">
                    <button
                        data-modal-hide="edit-promocode-modal"
                        class="bg-[#57C1D1] hover:bg-[#4BB3C2] text-white py-3 px-9 rounded-lg font-medium text-base shadow-[0px_4px_10px_rgba(0,0,0,0.05)] transition"
                    >
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>
    <script></script>
</body>
<%- include('../../../../layouts/footer.ejs') %>
