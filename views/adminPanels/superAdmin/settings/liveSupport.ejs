<%- include('../../../layouts/header.ejs', {currentPage: 'settings'}) %>
<head>
    <style>
        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
        }
        .finance-title {
            display: flex;
            align-items: center;
            gap: 10px;
        }
    </style>
</head>
<body class="flex min-h-screen bg-[#f6f6f6]">
    <main class="ml-64">
        <div class="min-h-screen bg-[#f6f6f6] rounded-l-[50px] p-8 shadow-md flex flex-col">
            <div class="bg-[#eaeae9] rounded-l-[25px] rounded-r-[25px] shadow-md border-[2px]">
                <div class="bg-white rounded-l-[25px] rounded-r-[25px] p-6 shadow-md border-[2px]">
                    <div class="flex justify-between items-center">
                        <!-- Left side - title -->
                        <div class="flex items-center space-x-2">
                            <h1 class="text-3xl font-bold text-gray-800">Settings >></h1>
                            <h1 class="text-2xl text-gray-500 ml-2">Live Support</h1>
                        </div>

                        <!-- Right side - Profile info -->
                        <div class="flex items-center">
                            <img
                                src="https://i.pravatar.cc/40?img=11"
                                alt="Profile"
                                class="w-10 h-10 rounded-full shadow-md"
                            />
                            <div class="text-right">
                                <div class="text-base font-semibold text-gray-800">
                                    Thomas Lewis
                                </div>
                                <div class="text-sm text-gray-500">Super Admin</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Request Type Buttons -->
            <div class="flex justify-end items-end p-4">
                <div class="relative">
                    <div
                        class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                    >
                        <svg
                            class="h-5 w-5 text-gray-400"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                            />
                        </svg>
                    </div>
                    <input
                        type="text"
                        placeholder="Search"
                        class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-full bg-white shadow-sm focus:outline-none focus:ring-2 focus:ring-[#163f75] focus:border-[#163f75] sm:text-sm"
                    />
                </div>
            </div>

            <!-- Main Content Area -->
            <div class="bg-white rounded-l-[20px] rounded-r-[20px] p-6 shadow-md">
                <div class="flex">
                    <!-- Sidebar -->
                    <div class="w-60 pr-6 border-r border-gray-300">
                        <ul class="space-y-2 text-gray-700 text-sm font-medium">
                            <li>
                                <a
                                    href="/super-admin/settings/personal-details"
                                    class="block px-4 py-2 rounded-md hover:bg-gray-100"
                                >
                                    Personal Details
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/super-admin/settings/bank-details"
                                    class="block px-4 py-2 rounded-md hover:bg-gray-100"
                                >
                                    Bank Details
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/super-admin/settings/sub-admin"
                                    class="block px-4 py-2 rounded-md hover:bg-gray-100"
                                >
                                    Sub Admin
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/super-admin/settings/commission-details"
                                    class="block px-4 py-2 rounded-md hover:bg-gray-100"
                                >
                                    Commission Details
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/super-admin/settings/emergency-numbers"
                                    class="block px-4 py-2 rounded-md hover:bg-gray-100"
                                >
                                    Emergency Numbers
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/super-admin/settings/live-support"
                                    class="block px-4 py-2 rounded-md bg-[#def2f1] text-[#163f75] font-semibold"
                                >
                                    Live Support
                                </a>
                            </li>
                        </ul>
                    </div>
                    <!-- Profile Info Card -->
                    <div class="flex-1 pl-10 pr-6">
                        <div class="flex h-[600px] bg-white rounded-lg overflow-hidden shadow-lg">
                            <!-- Contacts List -->
                            <div
                                class="w-1/3 border-r border-gray-200 p-4 space-y-4 overflow-y-auto"
                            >
                                <!-- Each Contact -->
                                <div
                                    class="flex items-center justify-between bg-[#def2f1] p-2 rounded-lg cursor-pointer"
                                >
                                    <div class="flex items-center space-x-3">
                                        <img
                                            src="https://i.pravatar.cc/40?img=1"
                                            class="w-10 h-10 rounded-full"
                                        />
                                        <div>
                                            <p class="font-semibold text-[#163f75]">
                                                Elmer Laverty
                                            </p>
                                            <p class="text-sm text-gray-500 truncate">
                                                Ament Minim mollit non...
                                            </p>
                                        </div>
                                    </div>
                                    <span class="text-xs text-gray-400">12m</span>
                                </div>

                                <!-- Add more contacts like above -->
                                <div
                                    class="flex items-center justify-between p-2 rounded-lg hover:bg-gray-100 cursor-pointer"
                                >
                                    <div class="flex items-center space-x-3">
                                        <img
                                            src="https://i.pravatar.cc/40?img=2"
                                            class="w-10 h-10 rounded-full"
                                        />
                                        <div>
                                            <p class="font-semibold">Florencio Dorrance</p>
                                            <p class="text-sm text-gray-500 truncate">woohoooo</p>
                                        </div>
                                    </div>
                                    <span class="text-xs text-gray-400">24m</span>
                                </div>

                                <!-- Continue adding others like above -->
                            </div>

                            <!-- Chat Window -->
                            <div class="flex-1 flex flex-col p-4 justify-between">
                                <!-- Chat Header -->
                                <div class="flex items-center justify-between border-b pb-3 mb-3">
                                    <div class="flex items-center space-x-3">
                                        <img
                                            src="https://i.pravatar.cc/40?img=1"
                                            class="w-10 h-10 rounded-full"
                                        />
                                        <p class="font-semibold">Elmer Laverty</p>
                                    </div>
                                    <button>
                                        <svg
                                            class="w-5 h-5 text-gray-500"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M13 16h-1v-4h-1m1-4h.01M12 20a8 8 0 100-16 8 8 0 000 16z"
                                            />
                                        </svg>
                                    </button>
                                </div>

                                <!-- Chat Messages -->
                                <div class="flex-1 space-y-3 overflow-y-auto pr-2">
                                    <!-- Received Message -->
                                    <div class="flex flex-col items-start">
                                        <div class="bg-gray-100 p-3 rounded-lg text-sm max-w-sm">
                                            Amet minim mollit non deserunt ullamco est sit aliqua
                                            dolor.
                                        </div>
                                        <span class="text-xs text-gray-400 mt-1">09:40 AM</span>
                                    </div>

                                    <!-- Sent Message -->
                                    <div class="flex flex-col items-end">
                                        <div
                                            class="bg-[#def2f1] text-[#163f75] p-3 rounded-lg text-sm max-w-sm"
                                        >
                                            Amet minim mollit non deserunt ullamco est sit aliqua
                                            dolor do amet sint. Velit officia
                                        </div>
                                        <span class="text-xs text-gray-400 mt-1">09:40 AM</span>
                                    </div>

                                    <!-- More messages -->
                                </div>

                                <!-- Chat Input -->
                                <div class="mt-4 flex items-center border-t pt-3">
                                    <input
                                        type="text"
                                        placeholder="Write Here..."
                                        class="flex-1 rounded-full border border-gray-300 p-2 px-4 text-sm focus:outline-none focus:ring-2 focus:ring-[#163f75] focus:border-[#163f75]"
                                    />
                                    <button class="ml-3 text-[#163f75]">
                                        <svg
                                            class="w-6 h-6"
                                            fill="currentColor"
                                            viewBox="0 0 20 20"
                                        >
                                            <path
                                                d="M2.94 2.94a1.5 1.5 0 012.12 0L17 14.88a1.5 1.5 0 01-2.12 2.12L2.94 5.06a1.5 1.5 0 010-2.12z"
                                            />
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>

<%- include('../../../layouts/footer.ejs') %>
