<%- include('../../../layouts/header.ejs', {currentPage: 'settings'}) %>
<head>
    <style>
        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
        }
        .finance-title {
            display: flex;
            align-items: center;
            gap: 10px;
        }
    </style>
</head>
<body class="flex min-h-screen bg-[#f6f6f6]">
    <main class="ml-64">
        <div class="min-h-screen bg-[#f6f6f6] rounded-l-[50px] p-8 shadow-md flex flex-col">
            <div class="bg-[#eaeae9] rounded-l-[25px] rounded-r-[25px] shadow-md border-[2px]">
                <div class="bg-white rounded-l-[25px] rounded-r-[25px] p-6 shadow-md border-[2px]">
                    <div class="flex justify-between items-center">
                        <!-- Left side - title -->
                        <div class="flex items-center space-x-2">
                            <h1 class="text-3xl font-bold text-gray-800">Settings >></h1>
                            <h1 class="text-2xl text-gray-500 ml-2">Personal Details</h1>
                        </div>

                        <!-- Right side - Profile info -->
                        <div class="flex items-center">
                            <img
                                src="https://i.pravatar.cc/40?img=11"
                                alt="Profile"
                                class="w-10 h-10 rounded-full shadow-md"
                            />
                            <div class="text-right">
                                <div class="text-base font-semibold text-gray-800">
                                    Thomas Lewis
                                </div>
                                <div class="text-sm text-gray-500">Super Admin</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Request Type Buttons -->
            <div class="flex justify-end items-end p-4">
                <div class="relative">
                    <div
                        class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                    >
                        <svg
                            class="h-5 w-5 text-gray-400"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                            />
                        </svg>
                    </div>
                    <input
                        type="text"
                        placeholder="Search"
                        class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-full bg-white shadow-sm focus:outline-none focus:ring-2 focus:ring-[#163f75] focus:border-[#163f75] sm:text-sm"
                    />
                </div>
            </div>

            <!-- Main Content Area -->
            <div class="bg-white rounded-l-[20px] rounded-r-[20px] p-6 shadow-md">
                <div class="flex h-[690px]">
                    <!-- Sidebar -->
                    <div class="w-60 pr-6 border-r border-gray-300">
                        <ul class="space-y-2 text-gray-700 text-sm font-medium">
                            <li>
                                <a
                                    href="/super-admin/settings/personal-details"
                                    class="block px-4 py-2 rounded-md bg-[#def2f1] text-[#163f75] font-semibold"
                                >
                                    Personal Details
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/super-admin/settings/bank-details"
                                    class="block px-4 py-2 rounded-md hover:bg-gray-100"
                                >
                                    Bank Details
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/super-admin/settings/sub-admin"
                                    class="block px-4 py-2 rounded-md hover:bg-gray-100"
                                >
                                    Sub Admin
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/super-admin/settings/commission-details"
                                    class="block px-4 py-2 rounded-md hover:bg-gray-100"
                                >
                                    Commission Details
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/super-admin/settings/emergency-numbers"
                                    class="block px-4 py-2 rounded-md hover:bg-gray-100"
                                >
                                    Emergency Numbers
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/super-admin/settings/live-support"
                                    class="block px-4 py-2 rounded-md hover:bg-gray-100"
                                >
                                    Live Support
                                </a>
                            </li>
                        </ul>
                    </div>

                    <!-- Profile Info Card -->
                    <div class="flex-1 pl-10 pr-6">
                        <div class="space-y-6">
                            <!-- Image + Buttons -->
                            <div
                                class="flex justify-between items-center pb-4 border-b border-gray-200"
                            >
                                <img
                                    src="https://i.pravatar.cc/40?img=11"
                                    alt="Profile"
                                    class="w-16 h-16 rounded-full shadow-md object-cover"
                                />
                                <div class="flex gap-3">
                                    <!-- Delete -->
                                    <button class="p-2 hover:bg-red-50 rounded-full">
                                        <svg
                                            class="w-6 h-6"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="#F26E6E"
                                            stroke-width="2"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z"
                                            />
                                        </svg>
                                    </button>
                                    <!-- Edit -->
                                    <label
                                        class="p-2 hover:bg-blue-50 rounded-full cursor-pointer inline-flex items-center"
                                    >
                                        <svg
                                            width="20"
                                            height="20"
                                            fill="none"
                                            viewBox="0 0 20 20"
                                            stroke="#54B7C5"
                                            stroke-width="1.8"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                d="M6.15888 7.48807H5.38138C3.68555 7.48807 2.31055 8.86307 2.31055 10.5589V14.6214C2.31055 16.3164 3.68555 17.6914 5.38138 17.6914H14.6564C16.3522 17.6914 17.7272 16.3164 17.7272 14.6214V10.5506C17.7272 8.85974 16.3564 7.48807 14.6655 7.48807H13.8797"
                                            />
                                            <path
                                                d="M10.0182 1.82521V11.8594"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                            />
                                            <path
                                                d="M7.58984 4.26562L10.019 1.82562L12.449 4.26562"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                            />
                                        </svg>
                                        <input type="file" class="hidden" />
                                    </label>
                                </div>
                            </div>

                            <!-- Name -->
                            <div
                                class="flex justify-between items-center pb-4 border-b border-gray-200"
                            >
                                <div>
                                    <label class="block text-gray-500 text-sm mb-1">Name</label>
                                    <div class="text-lg font-semibold text-gray-800">
                                        Super Admin
                                    </div>
                                </div>
                                <button
                                    data-modal-target="edit-super-admin-name-modal"
                                    data-modal-toggle="edit-super-admin-name-modal"
                                    class="inline-flex items-center"
                                >
                                    <svg
                                        class="w-6 h-6"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="#54B7C5"
                                        stroke-width="2"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="m14.304 4.844 2.852 2.852M7 7H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-4.5m2.409-9.91a2.017 2.017 0 0 1 0 2.853l-6.844 6.844L8 14l.713-3.565 6.844-6.844a2.015 2.015 0 0 1 2.852 0Z"
                                        />
                                    </svg>
                                </button>
                            </div>

                            <!-- Contact -->
                            <div
                                class="flex justify-between items-center pb-4 border-b border-gray-200"
                            >
                                <div>
                                    <label class="block text-gray-500 text-sm mb-1">
                                        Contact No.
                                    </label>
                                    <div class="text-lg font-semibold text-gray-800">
                                        +973 12345678
                                    </div>
                                </div>
                                <button
                                    data-modal-target="edit-super-admin-contact-modal"
                                    data-modal-toggle="edit-super-admin-contact-modal"
                                    class="inline-flex items-center"
                                >
                                    <svg
                                        class="w-6 h-6"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="#54B7C5"
                                        stroke-width="2"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="m14.304 4.844 2.852 2.852M7 7H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-4.5m2.409-9.91a2.017 2.017 0 0 1 0 2.853l-6.844 6.844L8 14l.713-3.565 6.844-6.844a2.015 2.015 0 0 1 2.852 0Z"
                                        />
                                    </svg>
                                </button>
                            </div>

                            <!-- Email -->
                            <div
                                class="flex justify-between items-center pb-4 border-b border-gray-200"
                            >
                                <div>
                                    <label class="block text-gray-500 text-sm mb-1">Email</label>
                                    <div class="text-lg font-semibold text-gray-800">
                                        sb_management@hotmail.com
                                    </div>
                                </div>
                                <button
                                    data-modal-target="edit-super-admin-email-modal"
                                    data-modal-toggle="edit-super-admin-email-modal"
                                    class="inline-flex items-center"
                                >
                                    <svg
                                        class="w-6 h-6"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="#54B7C5"
                                        stroke-width="2"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            d="m14.304 4.844 2.852 2.852M7 7H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-4.5m2.409-9.91a2.017 2.017 0 0 1 0 2.853l-6.844 6.844L8 14l.713-3.565 6.844-6.844a2.015 2.015 0 0 1 2.852 0Z"
                                        />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- Edit Super Admin Name Modal -->
    <div
        id="edit-super-admin-name-modal"
        tabindex="-1"
        class="fixed top-0 left-0 right-0 z-50 w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-modal md:h-full hidden"
        aria-hidden="true"
    >
        <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
            <div class="bg-[#F7F6F5] rounded-2xl shadow-xl w-full max-w-md overflow-hidden">
                <!-- Modal Header -->
                <div class="flex justify-between items-center p-6 border-b border-gray-200">
                    <h3 class="text-xl font-semibold text-gray-800">Edit Name</h3>
                    <button
                        class="text-red-500 hover:text-red-700 text-xl"
                        data-modal-hide="edit-super-admin-name-modal"
                    >
                        Close &times;
                    </button>
                </div>

                <!-- Modal Content -->
                <div class="p-6">
                    <div class="space-y-5">
                        <input
                            type="text"
                            value="Super Admin"
                            placeholder="Enter Name"
                            class="w-full px-4 py-3 bg-white rounded-xl text-gray-700 text-sm focus:outline-none placeholder-gray-500 shadow-[0px_4px_10px_rgba(0,0,0,0.05)]"
                        />
                    </div>
                </div>

                <!-- Modal Footer -->
                <div class="flex justify-center mb-4 border-gray-200">
                    <button
                        data-modal-hide="edit-super-admin-name-modal"
                        class="bg-[#57C1D1] hover:bg-[#4BB3C2] text-white py-3 px-9 rounded-lg font-medium text-base shadow-[0px_4px_10px_rgba(0,0,0,0.05)] transition"
                    >
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Super Admin Contact No. Modal -->
    <div
        id="edit-super-admin-contact-modal"
        tabindex="-1"
        class="fixed top-0 left-0 right-0 z-50 w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-modal md:h-full hidden"
        aria-hidden="true"
    >
        <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
            <div class="bg-[#F7F6F5] rounded-2xl shadow-xl w-full max-w-md overflow-hidden">
                <!-- Modal Header -->
                <div class="flex justify-between items-center p-6 border-b border-gray-200">
                    <h3 class="text-xl font-semibold text-gray-800">Edit Contact No.</h3>
                    <button
                        class="text-red-500 hover:text-red-700 text-xl"
                        data-modal-hide="edit-super-admin-contact-modal"
                    >
                        Close &times;
                    </button>
                </div>

                <!-- Modal Content -->
                <div class="p-6">
                    <div class="space-y-5">
                        <input
                            type="text"
                            value="+971 7843249340"
                            placeholder="Enter Contact No."
                            class="w-full px-4 py-3 bg-white rounded-xl text-gray-700 text-sm focus:outline-none placeholder-gray-500 shadow-[0px_4px_10px_rgba(0,0,0,0.05)]"
                        />
                    </div>
                </div>

                <!-- Modal Footer -->
                <div class="flex justify-center mb-4 border-gray-200">
                    <button
                        data-modal-hide="edit-super-admin-contact-modal"
                        class="bg-[#57C1D1] hover:bg-[#4BB3C2] text-white py-3 px-9 rounded-lg font-medium text-base shadow-[0px_4px_10px_rgba(0,0,0,0.05)] transition"
                    >
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Super Admin Email Modal -->
    <div
        id="edit-super-admin-email-modal"
        tabindex="-1"
        class="fixed top-0 left-0 right-0 z-50 w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-modal md:h-full hidden"
        aria-hidden="true"
    >
        <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
            <div class="bg-[#F7F6F5] rounded-2xl shadow-xl w-full max-w-md overflow-hidden">
                <!-- Modal Header -->
                <div class="flex justify-between items-center p-6 border-b border-gray-200">
                    <h3 class="text-xl font-semibold text-gray-800">Edit Email</h3>
                    <button
                        class="text-red-500 hover:text-red-700 text-xl"
                        data-modal-hide="edit-super-admin-email-modal"
                    >
                        Close &times;
                    </button>
                </div>

                <!-- Modal Content -->
                <div class="p-6">
                    <div class="space-y-5">
                        <input
                            type="text"
                            value="sb_management@hotmail.com"
                            placeholder="Enter Email"
                            class="w-full px-4 py-3 bg-white rounded-xl text-gray-700 text-sm focus:outline-none placeholder-gray-500 shadow-[0px_4px_10px_rgba(0,0,0,0.05)]"
                        />
                    </div>
                </div>

                <!-- Modal Footer -->
                <div class="flex justify-center mb-4 border-gray-200">
                    <button
                        data-modal-hide="edit-super-admin-email-modal"
                        class="bg-[#57C1D1] hover:bg-[#4BB3C2] text-white py-3 px-9 rounded-lg font-medium text-base shadow-[0px_4px_10px_rgba(0,0,0,0.05)] transition"
                    >
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>
</body>

<%- include('../../../layouts/footer.ejs') %>
