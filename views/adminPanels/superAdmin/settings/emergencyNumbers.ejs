<%- include('../../../layouts/header.ejs', {currentPage: 'settings'}) %>
<head>
    <style>
        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
        }
        .finance-title {
            display: flex;
            align-items: center;
            gap: 10px;
        }
    </style>
</head>
<body class="flex min-h-screen bg-[#f6f6f6]">
    <main class="ml-64">
        <div class="min-h-screen bg-[#f6f6f6] rounded-l-[50px] p-8 shadow-md flex flex-col">
            <div class="bg-[#eaeae9] rounded-l-[25px] rounded-r-[25px] shadow-md border-[2px]">
                <div class="bg-white rounded-l-[25px] rounded-r-[25px] p-6 shadow-md border-[2px]">
                    <div class="flex justify-between items-center">
                        <!-- Left side - title -->
                        <div class="flex items-center space-x-2">
                            <h1 class="text-3xl font-bold text-gray-800">Settings >></h1>
                            <h1 class="text-2xl text-gray-500 ml-2">Emergency Numbers</h1>
                        </div>

                        <!-- Right side - Profile info -->
                        <div class="flex items-center">
                            <img
                                src="https://i.pravatar.cc/40?img=11"
                                alt="Profile"
                                class="w-10 h-10 rounded-full shadow-md"
                            />
                            <div class="text-right">
                                <div class="text-base font-semibold text-gray-800">
                                    Thomas Lewis
                                </div>
                                <div class="text-sm text-gray-500">Super Admin</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Request Type Buttons -->
            <div class="flex justify-end items-end p-4">
                <div class="relative">
                    <div
                        class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                    >
                        <svg
                            class="h-5 w-5 text-gray-400"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                            />
                        </svg>
                    </div>
                    <input
                        type="text"
                        placeholder="Search"
                        class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-full bg-white shadow-sm focus:outline-none focus:ring-2 focus:ring-[#163f75] focus:border-[#163f75] sm:text-sm"
                    />
                </div>
            </div>

            <!-- Main Content Area -->
            <div class="bg-white rounded-l-[20px] rounded-r-[20px] p-6 shadow-md">
                <div class="flex h-[690px]">
                    <!-- Sidebar -->
                    <div class="w-60 pr-6 border-r border-gray-300">
                        <ul class="space-y-2 text-gray-700 text-sm font-medium">
                            <li>
                                <a
                                    href="/superadmin/settings/personal-details"
                                    class="block px-4 py-2 rounded-md hover:bg-gray-100"
                                >
                                    Personal Details
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/superadmin/settings/bank-details"
                                    class="block px-4 py-2 rounded-md hover:bg-gray-100"
                                >
                                    Bank Details
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/superadmin/settings/sub-admin"
                                    class="block px-4 py-2 rounded-md hover:bg-gray-100"
                                >
                                    Sub Admin
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/superadmin/settings/commission-details"
                                    class="block px-4 py-2 rounded-md hover:bg-gray-100"
                                >
                                    Commission Details
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/superadmin/settings/emergency-numbers"
                                    class="block px-4 py-2 rounded-md bg-[#def2f1] text-[#163f75] font-semibold"
                                >
                                    Emergency Numbers
                                </a>
                            </li>
                            <li>
                                <a
                                    href="/superadmin/settings/live-support"
                                    class="block px-4 py-2 rounded-md hover:bg-gray-100"
                                >
                                    Live Support
                                </a>
                            </li>
                        </ul>
                    </div>
                    <!-- Profile Info Card -->
                    <div class="flex-1 p-10">
                        <div class="space-y-6">
                            <% if (!emergencyFile) { %>
                            <!-- FILE UPLOAD UI (Screenshot 1) -->
                            <div class="text-center mt-10">
                                <h2 class="text-lg font-semibold mb-4">Upload Emergency Numbers</h2>
                                <div
                                    class="border-dashed border-2 border-gray-300 rounded-md p-6 bg-gray-50 max-w-md mx-auto"
                                >
                                    <label
                                        for="emergencyUpload"
                                        class="flex flex-col items-center justify-center cursor-pointer text-gray-500 hover:text-gray-700"
                                    >
                                        <svg
                                            width="45"
                                            height="45"
                                            fill="none"
                                            viewBox="0 0 20 20"
                                            stroke="black"
                                            stroke-width="1.8"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                d="M6.15888 7.48807H5.38138C3.68555 7.48807 2.31055 8.86307 2.31055 10.5589V14.6214C2.31055 16.3164 3.68555 17.6914 5.38138 17.6914H14.6564C16.3522 17.6914 17.7272 16.3164 17.7272 14.6214V10.5506C17.7272 8.85974 16.3564 7.48807 14.6655 7.48807H13.8797"
                                            />
                                            <path
                                                d="M10.0182 1.82521V11.8594"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                            />
                                            <path
                                                d="M7.58984 4.26562L10.019 1.82562L12.449 4.26562"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                            />
                                        </svg>
                                        <span class="mt-3">Please Upload Here (PDF)</span>
                                        <input
                                            type="file"
                                            id="emergencyUpload"
                                            name="emergencyFile"
                                            accept="application/pdf"
                                            class="hidden"
                                        />
                                    </label>
                                </div>

                                <button
                                    class="mt-6 bg-[#49b8c0] w-[300px] h-[50px] hover:bg-[#38a3ab] text-white font-bold py-2 px-6 rounded-[15px] shadow transition duration-150 ease-in-out"
                                >
                                    Save
                                </button>
                            </div>

                            <% } else { %>
                            <!-- TABLE VIEW UI (Screenshot 2) -->
                            <div class="overflow-x-auto mt-2">
                                <table class="min-w-full" datatables="true">
                                    <thead class="bg-[#eaeae9] rounded-t-[30px]">
                                        <tr>
                                            <th
                                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider first:rounded-l-lg last:rounded-r-lg"
                                            >
                                                Date/Time
                                            </th>
                                            <th
                                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                            >
                                                Document
                                            </th>
                                            <th
                                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                            >
                                                Size
                                            </th>
                                            <th
                                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider last:rounded-r-lg"
                                            >
                                                Action
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="divide-y divide-gray-200 bg-[white]">
                                        <tr>
                                            <td
                                                class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"
                                            >
                                                <%= emergencyFile.uploadedAt %>
                                            </td>
                                            <td
                                                class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 flex items-center gap-2"
                                            >
                                                <svg
                                                    width="16"
                                                    height="18"
                                                    viewBox="0 0 16 18"
                                                    fill="none"
                                                    xmlns="http://www.w3.org/2000/svg"
                                                >
                                                    <path
                                                        d="M1.14204 0H10.8521L15.9992 5.04654V16.8743C15.9992 17.1727 15.8788 17.4588 15.6645 17.6698C15.4502 17.8807 15.1595 17.9993 14.8564 17.9993H1.1428C0.839713 17.9993 0.549037 17.8807 0.33472 17.6698C0.120403 17.4588 0 17.1727 0 16.8743V1.12495C-6.7324e-08 0.826727 0.120297 0.540704 0.334449 0.329756C0.548602 0.118808 0.839083 0.000198817 1.14204 0Z"
                                                        fill="#E2574C"
                                                    />
                                                </svg>

                                                <%= emergencyFile.name %>
                                            </td>
                                            <td
                                                class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"
                                            >
                                                <%= emergencyFile.size %>
                                            </td>
                                            <td
                                                class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"
                                            >
                                                <!-- View -->
                                                <button
                                                    data-modal-target=""
                                                    data-modal-toggle=""
                                                    class="text-blue-600 hover:text-blue-800 p-2 rounded-full hover:bg-blue-100"
                                                >
                                                    <svg
                                                        class="w-5 h-5"
                                                        fill="none"
                                                        stroke="#54B7C5"
                                                        viewBox="0 0 24 24"
                                                    >
                                                        <path
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                                        />
                                                        <path
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                                                        />
                                                    </svg>
                                                </button>
                                                <!-- Download -->
                                                <button
                                                    id="downloadBtn"
                                                    data-modal-target=""
                                                    data-modal-toggle=""
                                                    class="text-blue-600 hover:text-blue-800 p-2 rounded-full hover:bg-blue-100"
                                                >
                                                    <svg
                                                        width="18"
                                                        height="18"
                                                        viewBox="0 0 18 18"
                                                        fill="none"
                                                        xmlns="http://www.w3.org/2000/svg"
                                                    >
                                                        <g clip-path="url(#clip0_4766_65057)">
                                                            <path
                                                                d="M8.97538 11.6753V0.976562M8.97538 11.6753L5.85241 8.10929M8.97538 11.6753L12.0983 8.10929M1.16211 13.458L1.64747 15.6734C1.70783 16.0378 1.89117 16.3706 2.16698 16.6164C2.44279 16.8621 2.79444 17.006 3.16341 17.0241H14.788C15.157 17.006 15.5086 16.8621 15.7844 16.6164C16.0602 16.3706 16.2436 16.0378 16.3039 15.6734L16.7893 13.4574"
                                                                stroke="#163F75"
                                                                stroke-width="2"
                                                                stroke-linecap="round"
                                                                stroke-linejoin="round"
                                                            />
                                                        </g>
                                                        <defs>
                                                            <clipPath id="clip0_4766_65057">
                                                                <rect
                                                                    width="17.9518"
                                                                    height="18"
                                                                    fill="white"
                                                                />
                                                            </clipPath>
                                                        </defs>
                                                    </svg>
                                                </button>

                                                <!-- Delete SVG -->
                                                <button
                                                    type="button"
                                                    data-modal-target=""
                                                    data-modal-toggle=""
                                                    class="inline-flex items-center px-3 py-2"
                                                >
                                                    <svg
                                                        class="w-6 h-6 text-gray-800 dark:text-white"
                                                        aria-hidden="true"
                                                        xmlns="http://www.w3.org/2000/svg"
                                                        width="24"
                                                        height="24"
                                                        fill="none"
                                                        viewBox="0 0 24 24"
                                                    >
                                                        <path
                                                            stroke="#F26E6E"
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z"
                                                        />
                                                    </svg>
                                                </button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script>
        document.getElementById("downloadBtn").addEventListener("click", function () {
            // Method 1: For existing files
            const link = document.createElement("a");
            link.href = "<%= process.env.APP_URL_ADMIN %>/Icons/images/BMLogoSidebar.png";
            link.download = "BMLogoSidebar.png"; // Specify the file name
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);

            // Method 2: For dynamic content (text, JSON, etc.)
            // const data = "Hello, world!";
            // const blob = new Blob([data], { type: 'text/plain' });
            // const url = URL.createObjectURL(blob);
            // link.href = url;
        });
    </script>
</body>

<%- include('../../../layouts/footer.ejs') %>
