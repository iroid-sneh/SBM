            });
        document.getElementById("edit-user-modal").addEventListener("click", function (e) {
            if (e.target === this) {
                this.classList.add("hidden");
            }
        });

        // Toggle class when clicked
        document.querySelectorAll(".day-btn").forEach((btn) => {
            btn.addEventListener("click", () => {
