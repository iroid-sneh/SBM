<div
    class="bg-white rounded-tl-[40px] rounded-br-[90px] p-6 shadow-md flex justify-between items-center"
>
    <h1 class="text-2xl font-medium text-gray-500">Security</h1>
    <div class="flex items-center gap-4">
        <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg
                    class="h-5 w-5 text-gray-400"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                    />
                </svg>
            </div>
            <input
                type="text"
                placeholder="Search"
                class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg bg-white shadow-sm focus:outline-none focus:ring-1 focus:ring-[#54B7C5] focus:border-[#54B7C5] sm:text-sm"
            />
        </div>
        <!-- Tab Buttons -->
        <div class="bg-[#F3F2F1] rounded-lg flex items-center">
            <button
                onclick="window.location.href='<%= process.env.APP_URL_ADMIN %>/bmadmin/security/cases'"
                id="btn-resident"
                class="px-4 py-2 rounded-lg text-white bg-[#54B7C5] transition-all"
            >
                Cases
            </button>
            <button
                onclick="window.location.href='<%= process.env.APP_URL_ADMIN %>/bmadmin/security/visitors'"
                id="btn-security"
                class="px-4 py-2 rounded-lg text-gray-600 hover:text-black transition-all"
            >
                Visitors
            </button>
        </div>
        <!-- File icon at the start -->
        <button
            class="flex items-center m-2 mr-5"
            data-modal-target="reports-modal"
            data-modal-toggle="reports-modal"
        >
            <svg
                class="w-6 h-6 text-gray-800 transform scale-x-[-1]"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                fill="none"
                viewBox="0 0 24 24"
            >
                <path
                    stroke="#163f75"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 3v4a1 1 0 0 1-1 1H5m4 8h6m-6-4h6m4-8v16a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V7.914a1 1 0 0 1 .293-.707l3.914-3.914A1 1 0 0 1 9.914 3H18a1 1 0 0 1 1 1Z"
                />
            </svg>
        </button>
    </div>
</div>

<div></div>
<!-- Card -->
<div class="p-8 mx-auto">
    <!-- Filter -->
    <div class="flex justify-between gap-4 items-start pr-4 mt-4 items-center align-center">
        <!-- Category Slide Switcher - takes first column -->
        <div id="transactionStatusSwitcher" class="flex space-x-6 border-gray-200">
            <button
                class="status-btn text-m font-semibold text-[#163F75] border-b-2 border-[#54B7C5] pb-2"
                onclick="switchTransactionTab('all')"
            >
                All Actions
            </button>
            <button
                class="status-btn text-m font-semibold text-gray-500 hover:text-gray-700 pb-2"
                onclick="switchTransactionTab('paid')"
            >
                New Case
            </button>
            <button
                class="status-btn text-m font-semibold text-gray-500 hover:text-gray-700 pb-2"
                onclick="switchTransactionTab('unpaid')"
            >
                Investigation
            </button>
            <button
                class="status-btn text-m font-semibold text-gray-500 hover:text-gray-700 pb-2"
                onclick="switchTransactionTab('unpaid')"
            >
                Solved
            </button>
        </div>
        <div class="flex justify-end gap-4 items-end pr-4 items-center">
            <button
                class="flex items-center gap-1 text-sm text-[#54B7C5] hover:underline font-medium mt-6"
            >
                <svg
                    width="20"
                    height="20"
                    viewBox="0 0 20 20"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M12.4068 4.23333C11.6818 4.01667 10.8818 3.875 9.99844 3.875C6.00677 3.875 2.77344 7.10833 2.77344 11.1C2.77344 15.1 6.00677 18.3333 9.99844 18.3333C13.9901 18.3333 17.2234 15.1 17.2234 11.1083C17.2234 9.625 16.7734 8.24167 16.0068 7.09167"
                        stroke="#54B7C5"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    />
                    <path
                        d="M13.4396 4.43464L11.0312 1.66797"
                        stroke="#54B7C5"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    />
                    <path
                        d="M13.4411 4.43359L10.6328 6.48359"
                        stroke="#54B7C5"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    />
                </svg>
                Reset
            </button>

            <div class="relative">
                <label class="block text-sm font-medium text-gray-700 mb-1">From</label>
                <div class="relative">
                    <div
                        class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none"
                    >
                        <svg
                            class="w-4 h-4 text-gray-500"
                            aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                        >
                            <path
                                d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
                            />
                        </svg>
                    </div>
                    <input
                        datepicker
                        datepicker-orientation="bottom"
                        datepicker-format="dd-mm-yyyy"
                        type="text"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5"
                        placeholder="Select date"
                    />
                </div>
            </div>

            <div class="flex items-end">
                <div class="relative">
                    <label class="block text-sm font-medium text-gray-700 mb-1">To</label>
                    <div class="relative">
                        <div
                            class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none"
                        >
                            <svg
                                class="w-4 h-4 text-gray-500"
                                aria-hidden="true"
                                xmlns="http://www.w3.org/2000/svg"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"
                                />
                            </svg>
                        </div>
                        <input
                            datepicker
                            datepicker-orientation="bottom"
                            datepicker-format="dd-mm-yyyy"
                            type="text"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full ps-10 p-2.5"
                            placeholder="Select date"
                        />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="mt-6 overflow-x-auto">
        <table class="min-w-full border-separate border-spacing-y-2 text-sm">
            <thead class="bg-[#EAEAE9] text-gray-600 text-sm">
                <tr>
                    <th class="text-left py-3 px-4 first:rounded-l-lg last:rounded-r-lg">
                        Call Time
                    </th>
                    <th class="text-left py-3 px-4">Name</th>
                    <th class="text-left py-3 px-4">Flat/Villa</th>
                    <th class="text-left py-3 px-4">Case Type</th>
                    <th class="text-left py-3 px-4">Security</th>
                    <th class="text-left py-3 px-4">Time Taken</th>
                    <th class="text-left py-3 px-4 last:rounded-r-lg">Action</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 text-sm">
                <!-- Example Row 1 -->
                <tr class="border border-gray-800">
                    <td class="py-3 px-4 first:rounded-l-lg last:rounded-r-lg">
                        16:05:10 01.01.24
                    </td>
                    <td class="py-3 px-4">Faisal M. Toma</td>
                    <td class="py-3 px-4">125 - Flat</td>
                    <td class="py-3 px-4">Found</td>
                    <td class="py-3 px-4">Paul Joseph Andre</td>
                    <td class="py-3 px-4">2 Hr</td>
                    <td class="py-3 px-4 font-medium last:rounded-r-lg">
                        <% if (caseData.status === 'New Case') { %>
                        <button
                            data-modal-target="case-modal"
                            data-modal-toggle="case-modal"
                            class="bg-[#163F75] text-white text-sm font-semibold px-4 py-2.5 rounded-xl hover:bg-[#163F75]/70 transition"
                        >
                            <%= caseData.status %>
                        </button>
                        <% } else if (caseData.status === 'Investigation') { %>
                        <button
                            data-modal-target="case-modal"
                            data-modal-toggle="case-modal"
                            class="bg-[#FFFFFF] text-orange-500 text-sm font-semibold px-4 py-2.5 rounded-xl hover:bg-gray-300 transition"
                        >
                            <%= caseData.status %>
                        </button>
                        <% } else if (caseData.status === 'Solved') { %>
                        <button
                            data-modal-target="case-modal"
                            data-modal-toggle="case-modal"
                            class="bg-[#FFFFFF] text-[#69B816] text-sm font-semibold px-4 py-2.5 rounded-xl hover:bg-gray-300 transition"
                        >
                            <%= caseData.status %>
                        </button>
                        <% } %>
                    </td>
                </tr>
            </tbody>
        </table>

        <!-- Pagination -->
        <div class="flex justify-between items-center mt-4 px-4 text-sm text-gray-500">
            <span>Showing 1 of 28</span>
            <div class="flex gap-2">
                <button class="text-gray-500">&lt;</button>
                <button class="font-bold text-black">1</button>
                <button>2</button>
                <button>3</button>
                <button>4</button>
                <button>5</button>
                <button class="text-gray-500">&gt;</button>
            </div>
        </div>
    </div>
</div>

<!-- Case Details Modal -->
<div
    id="case-modal"
    class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center z-50"
>
    <div class="bg-white rounded-xl shadow-lg max-w-2xl w-full p-6 relative">
        <!-- Header -->
        <div class="flex justify-between items-center border-b pb-3">
            <h2 class="text-lg font-semibold text-gray-800">Case Details</h2>
            <button
                data-modal-hide="case-modal"
                class="text-red-500 text-sm font-semibold hover:text-red-700"
            >
                Close ✕
            </button>
        </div>

        <!-- Main Info -->
        <div class="flex flex-col md:flex-row gap-4 py-4 border-b">
            <!-- Left Section: Image + Name -->
            <div class="md:w-1/2 space-y-2">
                <div class="relative w-full">
                    <!-- Resident Image -->
                    <img
                        src="<%= process.env.APP_URL_ADMIN %>/Icons/images/swimmingpoolphoto.png"
                        alt="Resident Image"
                        class="rounded-md w-full h-32 bject-cover cursor-pointer"
                        data-modal-target="image-modal"
                        data-modal-toggle="image-modal"
                    />

                    <!-- View Enlarged SVG Button (Bottom-Right) -->
                    <button
                        data-modal-target="image-modal"
                        data-modal-toggle="image-modal"
                        class="absolute bottom-2 right-2 p-1 bg-white rounded-full shadow-md hover:scale-105 transition"
                        title="View Larger"
                    >
                        <svg
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                        >
                            <circle cx="12" cy="12" r="12" fill="#F7F6F5" />
                            <path
                                d="M9.62517 7.25006H7.25006V9.62517H6V6H9.62517V7.25006Z"
                                fill="black"
                            />
                            <path
                                d="M9.62517 16.7482H7.25006V14.373H6V17.9982H9.62517V16.7482Z"
                                fill="black"
                            />
                            <path
                                d="M14.3755 16.7482H16.7506V14.373H18.0007V17.9982H14.3755V16.7482Z"
                                fill="black"
                            />
                            <path
                                d="M14.3755 7.25006H16.7506V9.62517H18.0007V6H14.3755V7.25006Z"
                                fill="black"
                            />
                        </svg>
                    </button>
                </div>

                <p class="font-semibold text-gray-700"><%= caseData.resident.name %></p>
                <p class="text-sm text-gray-500"><%= caseData.resident.flat %></p>
            </div>

            <!-- Right Section: Case Info -->
            <div class="md:w-1/2 space-y-2 text-sm text-gray-800">
                <p>
                    Status: <% if (caseData.status === 'New Case') { %>
                    <span class="bg-blue-100 text-blue-600 px-2 py-1 rounded text-xs font-semibold">
                        <%= caseData.status %>
                    </span>
                    <% } else if (caseData.status === 'Investigation') { %>
                    <span
                        class="bg-orange-100 text-orange-600 px-2 py-1 rounded text-xs font-semibold"
                    >
                        <%= caseData.status %>
                    </span>
                    <% } else if (caseData.status === 'Solved') { %>
                    <span
                        class="bg-green-100 text-green-600 px-2 py-1 rounded text-xs font-semibold"
                    >
                        <%= caseData.status %>
                    </span>
                    <% } %>
                </p>
                <p>Date: <%= caseData.date %></p>
                <p>Time: <%= caseData.time %></p>
                <p>Case Type: <%= caseData.caseType %></p>
                <p>
                    Location:
                    <span class="font-medium"><%= caseData.location %></span>
                    <% if (caseData.locationUrl) { %>
                    <a href="<%= caseData.locationUrl %>" class="text-blue-500 text-xs ml-1">
                        Show Location
                    </a>
                    <% } %>
                </p>
                <% if (caseData.assignedSecurity) { %>
                <p>
                    Assigned Security:
                    <span class="font-medium text-black"><%= caseData.assignedSecurity %></span>
                </p>
                <% } %>
            </div>
        </div>

        <!-- Description -->
        <div class="py-4 text-sm text-gray-800">
            <p class="font-medium mb-1">Description:</p>
            <p><%= caseData.description %></p>
        </div>

        <!-- Result -->
        <% if (caseData.result) { %>
        <div class="py-4 text-sm text-gray-800">
            <p class="font-medium mb-1">Result of the Investigation:</p>
            <p><%= caseData.result %></p>
        </div>
        <% } %>

        <!-- Assign Security Button -->
        <% if (caseData.status === 'New Case') { %>
        <div class="text-center pt-2">
            <button
                data-modal-target="assign-security-modal"
                data-modal-toggle="assign-security-modal"
                class="bg-[#54B7C5] text-white font-semibold py-2 px-8 rounded-lg text-sm hover:bg-[#54B7C5]/90 transition"
            >
                Assign Security
            </button>
        </div>
        <% } %>
    </div>
</div>

<!-- Modal for enlarged photo -->
<div
    id="image-modal"
    tabindex="-1"
    aria-hidden="true"
    class="fixed inset-0 z-50 hidden overflow-y-auto overflow-x-hidden bg-black/70 flex items-center justify-center"
>
    <div class="relative max-w-4xl w-full p-4">
        <!-- Close button -->
        <button
            type="button"
            class="absolute top-1 right-1 text-white bg-gray-700 hover:bg-gray-600 rounded-full p-1"
            data-modal-hide="image-modal"
        >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M6 18L18 6M6 6l12 12"
                />
            </svg>
        </button>

        <!-- Enlarged image -->
        <img
            src="<%= process.env.APP_URL_ADMIN %>/Icons/images/swimmingpoolphoto.png"
            alt="Enlarged Image"
            class="w-full h-auto rounded-lg shadow-lg border-2 border-white"
        />
    </div>
</div>

<!-- Assign Security Modal -->
<div
    id="assign-security-modal"
    tabindex="-1"
    aria-hidden="true"
    class="fixed inset-0 z-50 hidden bg-black/50 flex items-center justify-center"
>
    <div class="bg-white rounded-xl shadow-lg max-w-md w-full p-6 relative">
        <!-- Modal Header -->
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-semibold text-gray-900">Assign Security</h2>
            <button data-modal-hide="assign-security-modal" class="text-red-500 font-medium">
                Close
                <span class="ml-1 text-xl font-semibold">×</span>
            </button>
        </div>

        <!-- Divider -->
        <hr class="mb-4" />

        <!-- Label -->
        <label class="block text-sm font-medium text-gray-700 mb-2">
            Select Available Security
        </label>

        <!-- Security List -->
        <form id="assign-security-form" class="space-y-3">
            <% securities.forEach(function(security, index) { %>
            <label
                for="security-<%= security.id %>"
                class="flex items-center gap-3 bg-white rounded-xl shadow-sm px-4 py-2 border border-gray-100 cursor-pointer hover:bg-gray-50 transition"
            >
                <input id="security-<%= security.id %>" type="radio" name="selectedSecurity"
                value="<%= security.id %>" class="form-radio h-5 w-5 text-[#54B7C5]" <%= index === 0
                ? 'checked' : '' %> />
                <img
                    src="<%= process.env.APP_URL_ADMIN %>/Icons/images/<%= security.image %>"
                    alt="<%= security.name %>"
                    class="w-8 h-8 rounded-full object-cover"
                />
                <span class="text-sm font-medium text-gray-900"><%= security.name %></span>
            </label>
            <% }) %>
        </form>

        <!-- Done Button -->
        <div class="mt-6 text-center">
            <button
                class="bg-[#54B7C5] text-white font-semibold px-8 py-2.5 rounded-xl hover:bg-[#54B7C5]/90 transition"
            >
                Done
            </button>
        </div>
    </div>
</div>

<script>
    function switchTransactionTab(tab) {
        // Remove active styles from all buttons
        document.querySelectorAll(".status-btn").forEach((btn) => {
            btn.classList.remove("text-[##163F75]", "border-b-2", "border-[#54B7C5]");
            btn.classList.add("text-gray-500");
        });

        // Add active styles to clicked button
        const activeBtn = event.currentTarget;
        activeBtn.classList.add("text-[#163F75]", "border-b-2", "border-[#54B7C5]");
        activeBtn.classList.remove("text-gray-500");
    }
</script>
