            </div>
        </div>
    </div>
</div>

<script>
    function switchTransactionTab(tab) {
        // Remove active styles from all buttons
        document.querySelectorAll(".status-btn").forEach((btn) => {
            btn.classList.remove("text-[##163F75]", "border-b-2", "border-[#54B7C5]");
            btn.classList.add("text-gray-500");
        });

        // Add active styles to clicked button
        const activeBtn = event.currentTarget;
        activeBtn.classList.add("text-[#163F75]", "border-b-2", "border-[#54B7C5]");
        activeBtn.classList.remove("text-gray-500");
    }

    const select = document.getElementById("maintenance-select");

    const dataFromBackend = {
        Cinema: ["Cinema 1", "Cinema 2"],
        Hall: ["Banquet Hall", "Conference Hall"],
        Sports: ["Tennis Court", "Basketball Arena"],
    };

    function handleCategoryChange(radio) {
        const value = radio.value;
        const options = dataFromBackend[value] || [];

        // Reset and populate dropdown
        select.innerHTML = `<option disabled selected>Select ${value}</option>`;
        options.forEach((opt) => {
            const option = document.createElement("option");
            option.value = opt;
            option.textContent = opt;
            select.appendChild(option);
        });
    }

    // Modal toggle functions (for test)
    function openMaintenanceModal() {
        document.getElementById("under-maintenance-modal").classList.remove("hidden");
    }

    function closeMaintenanceModal() {
        document.getElementById("under-maintenance-modal").classList.add("hidden");
    }
</script>
