                            >
                                <span x-text="permission"></span>
                                <button
                                    type="button"
                                    class="ml-2 text-red-500 hover:text-red-700"
                                    @click="remove(index)"
                                >
                                    Ã—
                                </button>
                            </span>
                        </template>

