                            @change="add($event)"
                            class="bg-transparent focus:outline-none text-sm text-gray-500"
                        >
                            <option value="" hidden>Select Permission</option>
                            <template x-for="perm in permissions" :key="perm">
                                <option
                                    x-show="!selected.includes(perm)"
                                    :value="perm"
                                    x-text="perm"
                                ></option>
                            </template>
