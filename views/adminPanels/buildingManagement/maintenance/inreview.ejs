<!-- Maintenance Details Modal (Styled Version) -->
<div
    id="maintenance-modal"
    class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50 hidden"
>
    <div class="bg-white w-[570px] rounded-xl shadow-lg overflow-hidden">
        <!-- Modal Header -->
        <div class="flex justify-between items-center px-6 py-4 border-b border-gray-200">
            <h2 class="text-base font-semibold text-gray-800">Maintenance Details</h2>
            <button
                data-modal-hide="maintenance-modal"
                class="text-red-500 hover:text-red-700 font-medium"
            >
                Close
                <span class="ml-1 text-xl font-semibold">×</span>
            </button>
        </div>

        <!-- Modal Content -->
        <div class="px-6 py-4 text-sm text-gray-700 space-y-4">
            <!-- Name, Address, Status -->
            <div class="flex justify-between items-start">
                <div>
                    <p class="font-medium text-gray-900 text-sm"><%= data.name %></p>
                    <p class="text-xs text-gray-500"><%= data.location %></p>
                </div>
                <div class="flex items-center gap-2">
                    <span class="text-xs text-gray-500">Status:</span>
                    <% if (data.status === 'New Request') { %>
                    <span
                        class="bg-[#EDF6F8] text-[#54B7C5] px-3 py-1 rounded-full text-xs font-medium"
                    >
                        New Request
                    </span>
                    <% } else if (data.status === 'Rejected') { %>
                    <span
                        class="bg-[#FCE7E9] text-[#EF4C64] px-3 py-1 rounded-full text-xs font-medium"
                    >
                        Rejected
                    </span>
                    <% } else { %>
                    <span
                        class="bg-gray-200 text-gray-700 px-3 py-1 rounded-full text-xs font-medium"
                    >
                        <%= data.status %>
                    </span>
                    <% } %>
                </div>
            </div>

            <!-- Divider -->
            <hr class="border-gray-200" />

            <!-- Maintenance Type & Priority -->
            <div class="flex justify-between">
                <p>
                    <span class="font-medium text-gray-800">Maintenance:</span>
                    <span><%= data.maintenanceType %></span>
                </p>
                <p>
                    <span class="font-medium text-gray-800">Priority Level:</span>
                    <span><%= data.priority %></span>
                </p>
            </div>

            <!-- Divider -->
            <hr class="border-gray-200" />

            <!-- Service Info -->
            <div>
                <p class="font-medium text-gray-800 mb-1">Service:</p>
                <p><%= data.services %></p>
            </div>

            <!-- Divider -->
            <hr class="border-gray-200" />

            <!-- Visit Date & Time -->
            <div>
                <p class="font-medium text-gray-800 mb-1">Labour's Visit Date/Time:</p>
                <p><%= data.visitDate %> &nbsp; <%= data.visitTime %></p>
            </div>

            <!-- Divider -->
            <hr class="border-gray-200" />

            <!-- Explain the Situation -->
            <div>
                <p class="font-medium text-gray-800 mb-1">Explain the Situation:</p>
                <p><%= data.description %></p>
            </div>

            <!-- Divider -->
            <hr class="border-gray-200" />

            <!-- Photo/Video -->
            <div>
                <p class="font-medium text-gray-800 mb-2">Photo/Video:</p>
                <div class="flex gap-3 flex-row">
                    <% data.media.forEach(item => { %> <% if (item.type === 'image') { %>
                    <div class="relative w-full">
                        <img
                            src="<%= process.env.APP_URL_ADMIN %>/Icons/images/<%= item.url %>"
                            class="min-w-[150px] max-h-[200px] w-auto rounded-md object-contain"
                            alt="Image"
                            data-modal-target="image-modal"
                            data-modal-toggle="image-modal"
                        />
                        <!-- View Enlarged SVG Button (Bottom-Right) -->
                        <button
                            data-modal-target="image-modal"
                            data-modal-toggle="image-modal"
                            class="absolute bottom-2 right-2 p-1 bg-white rounded-full shadow-md hover:scale-105 transition"
                            title="View Larger"
                        >
                            <svg
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <circle cx="12" cy="12" r="12" fill="#F7F6F5" />
                                <path
                                    d="M9.62517 7.25006H7.25006V9.62517H6V6H9.62517V7.25006Z"
                                    fill="black"
                                />
                                <path
                                    d="M9.62517 16.7482H7.25006V14.373H6V17.9982H9.62517V16.7482Z"
                                    fill="black"
                                />
                                <path
                                    d="M14.3755 16.7482H16.7506V14.373H18.0007V17.9982H14.3755V16.7482Z"
                                    fill="black"
                                />
                                <path
                                    d="M14.3755 7.25006H16.7506V9.62517H18.0007V6H14.3755V7.25006Z"
                                    fill="black"
                                />
                            </svg>
                        </button>
                    </div>
                    <% } else if (item.type === 'video') { %>
                    <video class="min-w-[250px] max-h-[200px] rounded-md object-contain" controls>
                        <source
                            src="<%= process.env.APP_URL_ADMIN %>/images/icons/<%= item.url %>"
                            type="video/mp4"
                        />
                    </video>
                    <% } %> <% }) %>
                </div>
            </div>
        </div>

        <% if (data.status === "New Request") { %>
        <!-- Footer -->
        <div class="p-4 border-t border-gray-200">
            <button
                data-modal-target="assign-technician-modal"
                data-modal-toggle="assign-technician-modal"
                class="w-full bg-[#54B7C5] text-white py-2 rounded-lg text-sm font-medium hover:bg-[#46a2af]"
            >
                Assign Technician
            </button>
        </div>
        <% } else if (data.status === "Rejected") { %>

        <div class="p-4 border-t border-gray-200">
            <p class="font-medium text-gray-800 mb-1">Reason for Rejection:</p>
            <p><%= data.reasonForRejection %></p>
        </div>

        <% } %>
    </div>
</div>

