        <script>
            Swal.fire({
                icon: "success",
                title: "Success",
                text: "<%= messages.success[0] %>",
                toast: true,
                position: "top-end",
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true,
            });
        </script>
        <% } %> <% if (messages.error && messages.error.length > 0) { %>
