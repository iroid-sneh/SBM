<div
    class="bg-white rounded-tl-[40px] rounded-br-[90px] p-6 shadow-md flex justify-between items-center"
>
    <div class="flex flex-row items-center justify-center gap-4">
        <h1 class="text-2xl font-medium text-gray-500">The Office</h1>
    </div>
    <div class="flex items-center gap-4">
        <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg
                    class="h-5 w-5 text-gray-400"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                    />
                </svg>
            </div>
            <input
                type="text"
                placeholder="Search"
                class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg bg-white shadow-sm focus:outline-none focus:ring-1 focus:ring-[#54B7C5] focus:border-[#54B7C5] sm:text-sm"
            />
        </div>
        <!-- Tab Buttons -->
        <div class="bg-[#F3F2F1] rounded-lg flex items-center mr-4">
            <button
                onclick="window.location.href='<%= process.env.APP_URL_ADMIN %>/bmadmin/theoffice/documents'"
                id="btn-resident"
                class="px-4 py-2 rounded-lg text-gray-600 hover:text-black transition-all"
            >
                Documents
            </button>
            <button
                onclick="window.location.href='<%= process.env.APP_URL_ADMIN %>/bmadmin/theoffice/election'"
                id="btn-resident"
                class="px-4 py-2 rounded-lg text-gray-600 hover:text-black transition-all"
            >
                Election
            </button>
            <button
                onclick="window.location.href='<%= process.env.APP_URL_ADMIN %>/bmadmin/theoffice/nomination'"
                id="btn-resident"
                class="px-4 py-2 rounded-lg text-gray-600 hover:text-black transition-all"
            >
                Nomination
            </button>
            <button
                onclick="window.location.href='<%= process.env.APP_URL_ADMIN %>/bmadmin/theoffice/ownersassociation'"
                id="btn-security"
                class="px-4 py-2 rounded-lg text-white bg-[#54B7C5] transition-all"
            >
                Owners Association
            </button>
        </div>
    </div>
</div>

<div class="p-8 mx-auto">
    <!-- Filter -->
    <div class="flex justify-end gap-4 items-start pr-4 mt-4 items-center align-center">
        <div class="flex justify-end gap-4 items-end pr-4 items-center">
            <div class="flex items-end gap-3">
                <button
                    class="bg-white text-sm font-semibold text-[#163F75] border border-gray-300 px-9 py-2.5 rounded-lg hover:bg-gray-300 transition"
                    data-modal-target="add-member-modal"
                    data-modal-toggle="add-member-modal"
                >
                    + Add Member
                </button>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="mt-6 overflow-x-auto">
        <table class="min-w-full border-separate border-spacing-y-2 text-sm">
            <thead class="bg-[#EAEAE9] text-gray-600 text-sm">
                <tr>
                    <th class="text-center py-3 px-4 first:rounded-l-lg last:rounded-r-lg">
                        Flat/Villa
                    </th>
                    <th class="text-center py-3 px-4">Building/Complex</th>
                    <th class="text-center py-3 px-4">User Name</th>
                    <th class="text-center py-3 px-4">ID No.</th>
                    <th class="text-center py-3 px-4">Nationality</th>
                    <th class="text-center py-3 px-4">Contact No.</th>
                    <th class="text-center py-3 px-4">Emergency No.</th>
                    <th class="text-center py-3 px-4">Property</th>
                    <th class="text-center py-3 px-4">Ownership</th>
                    <th class="text-center py-3 px-4">Position</th>
                    <th class="text-center py-3 px-4 last:rounded-r-lg">Action</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 text-sm">
                <!-- Example Row 1 -->
                <tr class="border border-gray-800">
                    <td class="py-3 text-center px-4 first:rounded-l-lg last:rounded-r-lg">
                        125 - Flat
                    </td>
                    <td class="py-3 text-center px-4">Marassi Residence</td>
                    <td class="py-3 text-center px-4">Francesca Metts</td>
                    <td class="py-3 text-center px-4">123456789</td>
                    <td class="py-3 text-center px-4">USA</td>
                    <td class="py-3 text-center px-4">+973 39876543</td>
                    <td class="py-3 text-center px-4">+973 39876543</td>
                    <td class="py-3 text-center px-4">Resident</td>
                    <td class="py-3 text-center px-4">Owner</td>
                    <td class="py-3 text-center px-4">Head</td>
                    <td class="py-3 text-center px-4 last:rounded-r-lg">
                        <button
                            type="button"
                            data-modal-target=""
                            data-modal-toggle=""
                            class="inline-flex items-center px-3 py-2"
                        >
                            <svg
                                class="w-6 h-6 text-gray-800 dark:text-white"
                                aria-hidden="true"
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                fill="none"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke="#F26E6E"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z"
                                />
                            </svg>
                        </button>
                        <button
                            type="button"
                            data-modal-target="edit-event-modal"
                            data-modal-toggle="edit-event-modal"
                            class="inline-flex items-center"
                        >
                            <svg
                                class="w-6 h-6 text-gray-800 dark:text-white"
                                aria-hidden="true"
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                fill="none"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke="#54B7C5"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="m14.304 4.844 2.852 2.852M7 7H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-4.5m2.409-9.91a2.017 2.017 0 0 1 0 2.853l-6.844 6.844L8 14l.713-3.565 6.844-6.844a2.015 2.015 0 0 1 2.852 0Z"
                                />
                            </svg>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>

        <!-- Pagination -->
        <div class="flex justify-between items-center mt-4 px-4 text-sm text-gray-500">
            <span>Showing 1 of 28</span>
            <div class="flex gap-2">
                <button class="text-gray-500">&lt;</button>
                <button class="font-bold text-black">1</button>
                <button>2</button>
                <button>3</button>
                <button>4</button>
                <button>5</button>
                <button class="text-gray-500">&gt;</button>
            </div>
        </div>
    </div>
</div>

<!-- + Add Member Modal -->
<div
    id="add-member-modal"
    tabindex="-1"
    class="fixed top-0 left-0 right-0 z-50 w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-modal md:h-full hidden"
    aria-hidden="true"
>
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
        <div class="bg-[#F7F6F5] rounded-2xl shadow-xl w-full max-w-md overflow-hidden">
            <!-- Modal Header -->
            <div class="flex justify-between items-center p-6 border-b border-gray-200">
                <h3 class="text-xl font-semibold text-gray-800">+ Add Member</h3>
                <button
                    class="text-red-500 hover:text-red-700 text-xl"
                    data-modal-hide="add-member-modal"
                >
                    Close &times;
                </button>
            </div>

            <!-- Modal Content -->
            <div class="p-6">
                <div class="space-y-5">
                    <div>
                        <select
                            id="theoffice-select"
                            class="w-full px-4 py-3 bg-white rounded-xl text-gray-700 text-sm focus:outline-none placeholder-gray-500 shadow-[0px_4px_10px_rgba(0,0,0,0.05)]"
                        >
                            <option disabled selected>Select Member</option>
                            <option>Member 1</option>
                            <option>Member 2</option>
                            <option>Member 3</option>
                        </select>
                    </div>

                    <div>
                        <select
                            id="theoffice-select"
                            class="w-full px-4 py-3 bg-white rounded-xl text-gray-700 text-sm focus:outline-none placeholder-gray-500 shadow-[0px_4px_10px_rgba(0,0,0,0.05)]"
                        >
                            <option disabled selected>Select Position</option>
                            <option>Head</option>
                            <option>Secretary</option>
                            <option>Member</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Modal Footer -->
            <div class="flex justify-center p-6 border-t border-gray-200">
                <button
                    class="bg-[#57C1D1] hover:bg-[#4BB3C2] text-white py-3 px-9 rounded-lg font-medium text-base shadow-[0px_4px_10px_rgba(0,0,0,0.05)] transition"
                >
                    Save
                </button>
            </div>
        </div>
    </div>
</div>

