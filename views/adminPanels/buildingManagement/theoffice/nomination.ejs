<div
    class="bg-white rounded-tl-[40px] rounded-br-[90px] p-6 shadow-md flex justify-between items-center"
>
    <h1 class="text-2xl font-medium text-gray-500">The Office</h1>
    <div class="flex items-center gap-4">
        <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg
                    class="h-5 w-5 text-gray-400"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                    />
                </svg>
            </div>
            <input
                type="text"
                placeholder="Search"
                class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg bg-white shadow-sm focus:outline-none focus:ring-1 focus:ring-[#54B7C5] focus:border-[#54B7C5] sm:text-sm"
            />
        </div>
        <!-- Tab Buttons -->
        <div class="bg-[#F3F2F1] rounded-lg flex items-center mr-4">
            <button
                onclick="window.location.href='<%= process.env.APP_URL_ADMIN %>/bmadmin/theoffice/documents'"
                id="btn-resident"
                class="px-4 py-2 rounded-lg text-gray-600 hover:text-black transition-all"
            >
                Documents
            </button>
            <button
                onclick="window.location.href='<%= process.env.APP_URL_ADMIN %>/bmadmin/theoffice/election'"
                id="btn-resident"
                class="px-4 py-2 rounded-lg text-gray-600 hover:text-black transition-all"
            >
                Election
            </button>
            <button
                onclick="window.location.href='<%= process.env.APP_URL_ADMIN %>/bmadmin/theoffice/nomination'"
                id="btn-resident"
                class="px-4 py-2 rounded-lg text-white bg-[#54B7C5] transition-all"
            >
                Nomination
            </button>
            <button
                onclick="window.location.href='<%= process.env.APP_URL_ADMIN %>/bmadmin/theoffice/ownersassociation'"
                id="btn-security"
                class="px-4 py-2 rounded-lg text-gray-600 hover:text-black transition-all"
            >
                Owners Association
            </button>
        </div>
    </div>
</div>

<!-- Card -->
<div class="p-8 mx-auto">
    <!-- Filter -->
    <div class="flex justify-between gap-4 items-start pr-4 mt-4 items-center align-center">
        <!-- ðŸ”½ Building/Villa Dropdown -->
        <div class="relative">
            <select
                name="property"
                id="property"
                class="appearance-none w-full bg-transparent font-medium text-sm text-black pr-6 pl-2 py-1 rounded focus:outline-none"
            >
                <% properties.forEach(function(property) { const selected = (selectedPropertyId ==
                property.id) ? 'selected' : ''; %>
                <option class="" value="<%= property.id %>" <%="selected" %>
                    ><%= property.name %>
                </option>
                <% }) %>
            </select>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-2">
                <svg
                    class="w-4 h-4 text-black"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    viewBox="0 0 24 24"
                >
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                </svg>
            </div>
        </div>
        <div class="flex justify-end items-end">
            <button
                data-modal-target="send-nominate-name-modal"
                data-modal-toggle="send-nominate-name-modal"
                class="bg-[#163F75] text-sm font-semibold text-white border border-1 border-gray-300 px-9 py-2.5 rounded-lg hover:bg-[#163F75]/80 transition"
            >
                Send Nominate Name
            </button>
        </div>
    </div>

    <div class="mt-6 overflow-y-auto max-h-[650px]">
        <div class="bg-white px-6 py-4 border border-gray-300 rounded-b-xl">
            <!-- Header -->
            <div class="flex items-center justify-between mb-4">
                <select class="bg-[#54B7C5] text-white px-4 py-2 rounded-md">
                    <option>March 2025</option>
                    <option>June 2025</option>
                    <option>July 2025</option>
                    <!-- More months if needed -->
                </select>
                <span class="text-sm text-gray-800 font-medium">Top 10 of the Month</span>
            </div>

            <!-- Chart Canvas -->
            <div class="bg-[#F7F6F5] border rounded-xl p-4 shadow relative">
                <canvas id="top10Chart" class="w-full max-h-96"></canvas>
                <!-- Dynamic Top 3 Overlays -->
                <div id="topOverlays" class="absolute inset-0 pointer-events-none"></div>
            </div>
            <!-- Footer -->
            <p class="mt-4 font-medium text-gray-800">
                Nominated:
                <span class="font-semibold">John Andrew</span>
            </p>
        </div>
    </div>
</div>

<!-- Send Nominate Name Modal -->
<div
    id="send-nominate-name-modal"
    tabindex="-1"
    class="fixed top-0 left-0 right-0 z-50 w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-modal md:h-full hidden"
    aria-hidden="true"
>
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
        <div class="bg-[#F7F6F5] rounded-2xl shadow-xl w-full max-w-md overflow-hidden">
            <!-- Modal Header -->
            <div class="flex justify-between items-center p-6 border-b border-gray-200">
                <h3 class="text-xl font-semibold text-gray-800">Send Nominate Name</h3>
                <button
                    class="text-red-500 hover:text-red-700 text-xl"
                    data-modal-hide="send-nominate-name-modal"
                >
                    Close &times;
                </button>
            </div>

            <!-- Modal Content -->
            <div class="p-6">
                <div class="space-y-5">
                    <!-- Election Title -->

                    <input
                        type="text"
                        value="March Month"
                        disabled
                        class="w-full px-4 py-2.5 bg-white border border-gray-300 rounded-lg text-sm text-gray-700"
                    />

                    <div>
                        <select
                            id="theoffice-select"
                            class="w-full px-4 py-3 bg-white rounded-xl text-gray-700 text-sm focus:outline-none placeholder-gray-500 shadow-[0px_4px_10px_rgba(0,0,0,0.05)]"
                        >
                            <option disabled selected>Select Nominate Name</option>
                            <option>Nominate 1</option>
                            <option>Nominate 2</option>
                            <option>Nominate 3</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Modal Footer -->
            <div class="flex justify-center p-6 border-t border-gray-200">
                <button
                    class="bg-[#57C1D1] hover:bg-[#4BB3C2] text-white py-3 px-9 rounded-lg font-medium text-base shadow-[0px_4px_10px_rgba(0,0,0,0.05)] transition"
                >
                    Send
                </button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const users = [
        { name: "John Andrew", score: 220, img: "https://i.imgur.com/FYTL2Pw.png" },
        { name: "Robert Fox", score: 185, img: "https://i.imgur.com/5c5E4Ij.png" },
        { name: "Jalal Bakir", score: 160, img: "https://i.imgur.com/HFCHrJ9.png" },
        { name: "Ghazi Fadel", score: 145 },
        { name: "Usama Ebeid", score: 120 },
        { name: "Bassam Ali", score: 115 },
        { name: "Khalid Bilal", score: 110 },
        { name: "Fuad Aziz", score: 75 },
        { name: "Amin Abadi", score: 30 },
        { name: "Saif Darwish", score: 10 },
    ];

    const ctx = document.getElementById("top10Chart").getContext("2d");

    const chartData = {
        labels: users.map((u) => u.name),
        datasets: [
            {
                data: users.map((u) => u.score),
                backgroundColor: "rgba(0, 123, 255, 0.6)",
                borderRadius: 10,
                barThickness: 56,
            },
        ],
    };

    const chart = new Chart(ctx, {
        type: "bar",
        data: chartData,
        options: {
            plugins: { legend: { display: false } },
            animation: {
                onComplete: () => {
                    drawTopThree();
                },
            },
            scales: {
                y: {
                    beginAtZero: true,
                    max: 250,
                    ticks: {
                        stepSize: 50,
                        callback: (value) => `${value} Points`,
                    },
                },
            },
        },
    });

    function drawTopThree() {
        const chartMeta = chart.getDatasetMeta(0).data;
        const topOverlays = document.getElementById("topOverlays");
        topOverlays.innerHTML = "";

        const topThree = [...users]
            .map((user, index) => ({ ...user, index }))
            .sort((a, b) => b.score - a.score)
            .slice(0, 3);

        const starColors = ["yellow-400", "blue-400", "green-500"];
        const starImages = [
            "https://cdn-icons-png.flaticon.com/512/1828/1828884.png",
            "https://cdn-icons-png.flaticon.com/512/1828/1828970.png",
            "https://cdn-icons-png.flaticon.com/512/1828/1828961.png",
        ];

        topThree.forEach((user, rank) => {
            const bar = chartMeta[user.index];
            const { x, y } = bar.tooltipPosition();

            const overlay = document.createElement("div");
            overlay.className = `absolute flex flex-col items-center transition-all`;
            overlay.style.left = `${x - 5}px`;
            overlay.style.top = `${y - 60}px`;

            overlay.innerHTML = `
          ${
              user.img
                  ? `<img src="${user.img}" class="w-10 h-10 rounded-full border-4 border-${starColors[rank]} mb-1">`
                  : ""
          }
          <img src="${starImages[rank]}" class="w-6 h-6">
        `;

            topOverlays.appendChild(overlay);
        });
    }
</script>
