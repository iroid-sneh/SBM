<div
    class="bg-white rounded-tl-[40px] rounded-br-[90px] p-6 shadow-md flex justify-between items-center"
>
    <h1 class="text-2xl font-medium text-gray-500">The Office</h1>
    <div class="flex items-center gap-4">
        <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg
                    class="h-5 w-5 text-gray-400"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                    />
                </svg>
            </div>
            <input
                type="text"
                placeholder="Search"
                class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg bg-white shadow-sm focus:outline-none focus:ring-1 focus:ring-[#54B7C5] focus:border-[#54B7C5] sm:text-sm"
            />
        </div>
        <!-- Tab Buttons -->
        <div class="bg-[#F3F2F1] rounded-lg flex items-center mr-4">
            <button
                onclick="window.location.href='<%= process.env.APP_URL_ADMIN %>/bmadmin/theoffice/documents'"
                id="btn-resident"
                class="px-4 py-2 rounded-lg text-gray-600 hover:text-black transition-all"
            >
                Documents
            </button>
            <button
                onclick="window.location.href='<%= process.env.APP_URL_ADMIN %>/bmadmin/theoffice/election'"
                id="btn-resident"
                class="px-4 py-2 rounded-lg text-white bg-[#54B7C5] transition-all"
            >
                Election
            </button>
            <button
                onclick="window.location.href='<%= process.env.APP_URL_ADMIN %>/bmadmin/theoffice/nomination'"
                id="btn-resident"
                class="px-4 py-2 rounded-lg text-gray-600 hover:text-black transition-all"
            >
                Nomination
            </button>
            <button
                onclick="window.location.href='<%= process.env.APP_URL_ADMIN %>/bmadmin/theoffice/ownersassociation'"
                id="btn-security"
                class="px-4 py-2 rounded-lg text-gray-600 hover:text-black transition-all"
            >
                Owners Association
            </button>
        </div>
    </div>
</div>

