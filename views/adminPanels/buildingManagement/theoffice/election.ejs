<script>
    function toggleDetails(button) {
        const parentRow = button.closest("tr");
        const id = parentRow.getAttribute("data-id");
        const detailRow = document.querySelector(`.details-row[data-id="${id}"]`);
        const isOpen = !detailRow.classList.contains("hidden");

        if (isOpen) {
            detailRow.classList.add("hidden");
            button.textContent = "View Details";
            button.classList.remove("bg-red-600", "hover:bg-red-500");
            button.classList.add("bg-[#163F75]", "hover:bg-[#163F75]/70");
        } else {
            detailRow.classList.remove("hidden");
            button.textContent = "Close";
            button.classList.remove("bg-[#163F75]", "hover:bg-[#163F75]/70");
            button.classList.add("bg-red-600", "hover:bg-red-500");
        }
    }

    // Line chart logic
    const ctx = document.getElementById("votesTallyChart-1").getContext("2d");

    new Chart(ctx, {
        type: "line",
        data: {
            labels: [
                "Amin Abzid",
                "Bassam Ali",
                "Fuad Aziz",
                "Saif Bakir",
                "Khalid Bilal",
                "Qadir Cham",
                "Saif Darwish",
                "Usama Ebeid",
                "Ghazi Fadel",
            ],
            datasets: [
                {
                    label: "Votes",
                    data: [180, 97, 160, 226, 200, 175, 140, 170, 80],
                    fill: true,
                    tension: 0.4,
                    borderColor: "#163F75",
                    backgroundColor: "rgba(22, 63, 117, 0.1)",
                    pointBackgroundColor: "#163F75",
                    pointRadius: 5,
                },
            ],
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: false },
                tooltip: {
                    callbacks: {
                        label: (context) => ` ${context.parsed.y} votes`,
                    },
                },
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        stepSize: 50,
                    },
                },
            },
        },
    });

    document.addEventListener("DOMContentLoaded", function () {
        const select = document.getElementById("candidate-select");
        const chipContainer = document.getElementById("selected-candidates");
        const selectedSet = new Set();

        select.addEventListener("change", function () {
            const selectedValue = this.value;
            const selectedOption = this.querySelector(`option[value="${selectedValue}"]`);

            if (selectedValue && !selectedSet.has(selectedValue)) {
                selectedSet.add(selectedValue);

                // Create chip
                const chip = document.createElement("span");
                chip.className =
                    "bg-[#54B7C5] text-white px-3 py-1 rounded-full flex items-center text-sm";
                chip.innerHTML = `${selectedValue}
                    <button class="ml-2 text-white hover:text-gray-200" onclick="removeChip('${selectedValue}')">&times;</button>`;

                chipContainer.appendChild(chip);

                // Disable the selected option
                selectedOption.disabled = true;
            }

            // Reset select
            this.value = "";
        });

        // Make removeChip globally accessible
        window.removeChip = function (value) {
            selectedSet.delete(value);
            // Remove from chip UI
            [...chipContainer.children].forEach((child) => {
                if (child.textContent.includes(value)) child.remove();
            });

            // Re-enable option
            const optionToEnable = select.querySelector(`option[value="${value}"]`);
            if (optionToEnable) optionToEnable.disabled = false;
        };
    });
</script>
